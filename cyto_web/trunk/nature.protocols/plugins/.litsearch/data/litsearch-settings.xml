<?xml version="1.0" encoding="UTF-8"?>
<!--
This file specifies various settings relevant to LitSearch.  In
particular the bot tag specifies some of the specific strings it uses
for markers in order to scrape data off of the search results returned
by the various search engines.  Do not try and modify the bot data
unless you know what your are doing as it's very easy to break things
in very bad ways.

You CAN change the others settings as needed, as they are pretty
straightforward.

NOTE: The various url_regexp's don't directly contain quotes,
less-than, or greater-than signs because these are special symbols in
XML.
-->
<litsearch-bots>
    <pubmedbot
        batch_display_url="http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve&amp;db=pubmed&amp;dopt=Abstract&amp;list_uids="
        batch_find_matches_url="http://eutils.ncbi.nlm.nih.gov/entrez/eutils/esearch.fcgi?db=pubmed&amp;term="
        batch_find_max_str="&amp;retmax="
        batch_read_matches_url="http://eutils.ncbi.nlm.nih.gov/entrez/eutils/efetch.fcgi?db=pubmed&amp;retmode=xml&amp;rettype=abstract&amp;id="
        batch_size="50" displayname="PubMed" initially-use-engine="true"
        prefix="http://www.ncbi.nlm.nih.gov" query_delim="+"
        query_hits="&amp;dispmax=" regexp_authors_group="2"
        show_pub_entries="true" tool_id="&amp;tool=LitSearch"
        url_regexp="\&quot;-1\&quot;>&lt;a href=\&quot;(.*?)\&quot;>(.*?)&lt;/a>.*?colspan=\&quot;2\&quot;>(.*?)&lt;br>&lt;font.*?>(.*?)&lt;/font>&lt;/td>"
        url_show="no"/>
   <bot displayname="OMIM"
        prefix="http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve&amp;db=OMIM&amp;dopt=Detailed&amp;list_uids="
        query_delim="+" query_hits="&amp;dispmax="
        query_url="http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Search&amp;db=Omim&amp;term="
        regexp_summary_group="3" regexp_title_group="2"
        regexp_url_group="1" show_pub_entries="false"
        url_regexp="checkbox.*?>&lt;a.*?href=\&quot;.*?id=(.*?)\&quot;>(.*?)&lt;/a>&lt;.*?colspan=\&quot;2\&quot;.*?>(.*?)&lt;/td>.*?&lt;/table>"
        url_show="no"/>
   <bot displayname="USPTO"
        prefix="http://patft.uspto.gov" query_delim="+"
        query_hits="&amp;l="
        query_url="http://patft.uspto.gov/netacgi/nph-Parser?Sect1=PTO2&amp;Sect2=HITOFF&amp;u=%2Fnetahtml%2Fsearch-adv.htm&amp;r=0&amp;p=1&amp;f=S&amp;d=pall&amp;Query="
        regexp_summary_group="3" regexp_title_group="2"
        regexp_url_group="1" show_pub_entries="false"
        url_regexp="valign=top>&lt;A  HREF=(.*?)>(.*?)&lt;/A>.*?/netaicon/PTO/ftext.gif.*?&lt;A  HREF=.*?>(.*?)&lt;/A>&lt;/TD>"
        url_show="no"/>
    <!-- legal values for enabled attribute are "true", "false", and "unset" -->
    <proxy
        enabled="true" host="web-proxy.scs.agilent.com"
        port="8088"/>
    <max-engine-matches
        initial-value="10"/>
    <show-results
        enabled="true"/>
    <poweruse enabled="true"/>
    <autosave
        file-location="data/ls-autosave.alfa"
        state="true"/>
    <default-concept-lexicon
        initial-value="Homo sapiens"/>
    <default-interaction-lexicon
        initial-value="limited"/>
    <make-context-nodes
        enabled="false"/>
<search-result-locations
        load-loc="\C:\Documents and Settings\ajk\.litsearch\data\" save-loc="C:\ajk\doc\metabolites"/></litsearch-bots>
