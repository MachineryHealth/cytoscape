<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<!-- All of the subprojects in corelibs need the groupId 'org.cytoscape' to allow the parent pom to install all of them-->
	<groupId>cytoscape</groupId>
	<artifactId>corelibs</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Cytoscape Corelibs</name>
	<url>http://maven.apache.org</url>

	<organization>
		<name>Cytoscape</name>
		<url>http://cytoscape.org</url>
	</organization>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl.html</url>
			<distribution>repo</distribution>
			<comments>LGPL</comments>
		</license>
	</licenses>

	<issueManagement>
		<system>Mantis</system>
		<url>http://cbio.mskcc.org/cytoscape/bugs/main_page.php</url>
	</issueManagement>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<modules>
		<module>util.intr</module>
		<module>giny</module>
		<module>graph.dynamic</module>
		<module>graph.fixed</module>
		<module>fing</module>
		<module>geom.spacial</module>
		<module>geom.rtree</module>
		<module>random</module>
		<module>undo.support</module>
		<module>task</module>
		<module>render.immed</module>
		<module>render.stateful</module>
		<module>render.export</module>
		<module>phoebe.dnd</module>
		<module>ding</module>
    <module>cruft-obo</module>
  </modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>