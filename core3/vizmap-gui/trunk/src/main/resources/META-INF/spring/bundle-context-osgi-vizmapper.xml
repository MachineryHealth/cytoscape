	<osgi:set id="valueEditorSet" interface="org.cytoscape.view.vizmap.gui.editor.ValueEditor"
		cardinality="0..N">
		<osgi:listener bind-method="addValueEditor"
			unbind-method="removeValueEditor" ref="editorManager" />

	</osgi:set>

</beans>
