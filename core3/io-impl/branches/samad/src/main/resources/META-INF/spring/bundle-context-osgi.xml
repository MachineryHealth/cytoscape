<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd"
	default-lazy-init="false">


	<!-- Utility for Stream/Proxy management -->
	<osgi:service id="streamUtilService" ref="streamUtil"
		interface="org.cytoscape.io.util.StreamUtil">
		<osgi:service-properties>
			<entry key="serviceType" value="utility" />
		</osgi:service-properties>
	</osgi:service>
	
	<!-- CyNetworkViewReaderFactory -->
	<osgi:service id="sifReaderFactoryService" ref="sifReaderFactory" interface="org.cytoscape.io.read.CyNetworkViewReaderFactory">
		<osgi:service-properties>
			<entry key="id" value="sif"/>
		</osgi:service-properties>
	</osgi:service>

	<osgi:set
		id="cyIOFactoryManager-CyNetworkViewReaderFactorySet"
		interface="org.cytoscape.io.read.CyNetworkViewReaderFactory"
		cardinality="0..N">
		<osgi:listener
			bind-method="addFactory"
			unbind-method="removeFactory"
			ref="cyIOFactoryManager-CyNetworkViewReaderFactory"/>
	</osgi:set>

	<osgi:service id="cyIOFactoryManager-CyNetworkViewReaderFactoryService"
			ref="cyIOFactoryManager-CyNetworkViewReaderFactory"
			interface="org.cytoscape.io.CyIOFactoryManager">
		<osgi:service-properties>
			<entry key="type" value="org.cytoscape.io.read.CyNetworkViewReaderFactory"/>
		</osgi:service-properties>
	</osgi:service>

	<!-- CyDataTableReaderFactory -->
	<osgi:service id="textDataTableReaderFactoryService" ref="textDataTableReaderFactory" interface="org.cytoscape.io.read.CyDataTableReaderFactory">
		<osgi:service-properties>
			<entry key="id" value="textDataTable"/>
		</osgi:service-properties>
	</osgi:service>

	<osgi:set
		id="cyIOFactoryManager-CyDataTableReaderFactorySet"
		interface="org.cytoscape.io.read.CyDataTableReaderFactory"
		cardinality="0..N">
		<osgi:listener
			bind-method="addFactory"
			unbind-method="removeFactory"
			ref="cyIOFactoryManager-CyDataTableReaderFactory"/>
	</osgi:set>

	<osgi:service id="cyIOFactoryManager-CyDataTableReaderFactoryService"
			ref="cyIOFactoryManager-CyDataTableReaderFactory"
			interface="org.cytoscape.io.CyIOFactoryManager">
		<osgi:service-properties>
			<entry key="type" value="org.cytoscape.io.read.CyDataTableReaderFactory"/>
		</osgi:service-properties>
	</osgi:service>
</beans>
