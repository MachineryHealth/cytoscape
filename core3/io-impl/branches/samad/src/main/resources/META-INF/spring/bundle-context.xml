<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:lang="http://www.springframework.org/schema/lang" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
    http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.5.xsd
            http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd"
	default-lazy-init="true">

	<context:annotation-config />

	<!-- *** Utility for Stream/Proxy management *** -->
	<bean id="readUtil" class="org.cytoscape.io.internal.util.ReadUtils">
		<constructor-arg ref="streamUtil" />
	</bean>

	<bean id="streamUtil" class="org.cytoscape.io.internal.util.StreamUtilImpl" />

	<!-- *** CyNetworkViewReaderFactory *** -->

	<bean id="sifReaderFactory" class="org.cytoscape.io.internal.read.sif.InteractionsReaderFactory">
		<constructor-arg index="0" ref="readUtil"/>
		<constructor-arg index="1">
			<bean class="org.cytoscape.io.internal.CyFileFilterImpl">
				<constructor-arg index="0">
					<set>
						<value>sif</value>
					</set>
				</constructor-arg>
				<constructor-arg index="1">
					<set>
						<value>text/plain</value>
					</set>
				</constructor-arg>
				<constructor-arg index="2" value="simple interaction file (sif)"/>
				<constructor-arg index="3" ref="streamUtil"/>
			</bean>
		</constructor-arg>
	</bean>


	<bean id="cyIOFactoryManager-CyNetworkViewReaderFactory" class="org.cytoscape.io.internal.CyIOFactoryManagerImpl"/>

	<!-- *** CyDataTableReaderFactory *** -->

	<bean id="textDataTableReaderFactory" class="org.cytoscape.io.internal.read.datatable.TextDataTableReaderFactory">
		<constructor-arg index="0">
			<bean class="org.cytoscape.io.internal.CyFileFilterImpl">
				<constructor-arg index="0">
					<set>
						<value>txt</value>
						<value>csv</value>
					</set>
				</constructor-arg>
				<constructor-arg index="1">
					<set>
						<value>text/plain</value>
					</set>
				</constructor-arg>
				<constructor-arg index="2" value="tab delimited text data table"/>
				<constructor-arg index="3" ref="streamUtil"/>
			</bean>
		</constructor-arg>
	</bean>

	<bean id="cyIOFactoryManager-CyDataTableReaderFactory" class="org.cytoscape.io.internal.CyIOFactoryManagerImpl"/>
</beans>
