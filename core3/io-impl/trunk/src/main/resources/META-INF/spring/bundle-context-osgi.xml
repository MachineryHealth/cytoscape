<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd"
	default-lazy-init="false">


	<!-- Import services -->
	<osgi:reference id="cyLayoutsServiceRef" 
	                interface="org.cytoscape.view.layout.CyLayouts" />

	<osgi:reference id="cyNetworkFactoryServiceRef"
	                interface="org.cytoscape.model.CyNetworkFactory" />

	<osgi:reference id="cyNetworkViewFactoryServiceRef"
	                interface="org.cytoscape.view.model.CyNetworkViewFactory" />
	
	<osgi:reference id="cyDataTableFactoryServiceRef" 
	                interface="org.cytoscape.model.CyTableFactory" />

	<osgi:reference id="cyPropertyServiceRef" 
	                interface="org.cytoscape.property.CyProperty"
	                filter="(cyPropertyName=coreSettings)" />

	<osgi:reference id="cyNetworkManagerServiceRef"
		interface="org.cytoscape.session.CyNetworkManager" />

	<!-- Export services -->
	<osgi:service id="cyNetworkViewReaderManagerService" ref="cyNetworkViewReaderManager"
		interface="org.cytoscape.io.read.CyNetworkViewReaderManager">
	</osgi:service>

	<osgi:service id="cyDataTableReaderManagerService" ref="cyDataTableReaderManager"
		interface="org.cytoscape.io.read.CyTableReaderManager">
	</osgi:service>

	<osgi:service id="viewWriterManagerService" ref="viewWriterManager"
		interface="org.cytoscape.io.write.ViewWriterManager">
	</osgi:service>

	<osgi:service id="cySessionReaderManagerService" ref="cySessionReaderManager"
		interface="org.cytoscape.io.read.CySessionReaderManager">
	</osgi:service>	

	<osgi:service id="networkViewWriterManagerService" ref="networkViewWriterManager"
		interface="org.cytoscape.io.write.CyNetworkViewWriterManager">
	</osgi:service>

	<osgi:service id="sessionWriterManagerService" ref="sessionWriterManager"
		interface="org.cytoscape.io.write.SessionWriterManager">
	</osgi:service>

	<osgi:service id="sifNetworkViewReaderFactoryService" ref="sifNetworkViewReaderFactory"
		interface="org.cytoscape.io.read.InputStreamTaskFactory">
		<osgi:service-properties>
			<entry key="serviceType" value="sifNetworkViewReaderFactory" />
			<entry key="readerId" value="sifNetworkViewReader" />
			<entry key="readerDescription" value="Simple Interaction Format (SIF) file reader" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:service id="sifNetworkViewWriterFactoryService" ref="sifNetworkViewWriterFactory"
		interface="org.cytoscape.io.write.CyNetworkViewWriterFactory">
	</osgi:service>

	<osgi:service id="xgmmlNetworkViewReaderFactoryService" ref="xgmmlNetworkViewReaderFactory"
		interface="org.cytoscape.io.read.InputStreamTaskFactory">
		<osgi:service-properties>
			<entry key="serviceType" value="xgmmlNetworkViewReaderFactory" />
			<entry key="readerId" value="xgmmlNetworkViewReader" />
			<entry key="readerDescription"
				value="eXtensible Graph Markup and Modeling Language (XGMML) file reader" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:service id="xgmmlNetworkViewWriterFactoryService" ref="xgmmlNetworkViewWriterFactory"
		interface="org.cytoscape.io.write.CyNetworkViewWriterFactory">
	</osgi:service>

	<osgi:service id="textDataTableReaderFactoryService" ref="textDataTableReaderFactory"
		interface="org.cytoscape.io.read.InputStreamTaskFactory">
		<osgi:service-properties>
			<entry key="serviceType" value="textDataTableReaderFactory" />
			<entry key="readerId" value="textDataTableReader" />
			<entry key="readerDescription" value="text data table producer" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:service id="gmlNetworkViewReaderFactoryService" ref="gmlNetworkViewReaderFactory"
		interface="org.cytoscape.io.read.InputStreamTaskFactory">
		<osgi:service-properties>
			<entry key="serviceType" value="gmlNetworkViewReaderFactory" />
			<entry key="readerId" value="gmlNetworkViewReader" />
			<entry key="readerDescription" value="GML file reader" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:service id="sessionReaderFactoryService" ref="sessionReaderFactory"
		interface="org.cytoscape.io.read.InputStreamTaskFactory">
		<osgi:service-properties>
			<entry key="serviceType" value="sessionReaderFactory" />
			<entry key="readerId" value="sessionReaderFactory" />
			<entry key="readerDescription" value="Cytoscape Session Reader" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:service id="sessionWriterFactoryService" ref="sessionWriterFactory"
		interface="org.cytoscape.io.write.SessionWriterFactory">
	</osgi:service>

	<osgi:service id="pngWriterFactoryService" ref="pngWriterFactory"
		interface="org.cytoscape.io.write.ViewWriterFactory">
	</osgi:service>

	<osgi:service id="jpegWriterFactoryService" ref="jpegWriterFactory"
		interface="org.cytoscape.io.write.ViewWriterFactory">
	</osgi:service>

	<osgi:service id="streamUtilService" ref="streamUtil"
		interface="org.cytoscape.io.util.StreamUtil">
	</osgi:service>
	
	<!-- Define service listeners -->
	<osgi:set id="cyNetworkViewReaderFactories" 
	          interface="org.cytoscape.io.read.InputStreamTaskFactory"
	          cardinality="0..N">
		<osgi:listener bind-method="addInputStreamTaskFactory"
		               unbind-method="removeInputStreamTaskFactory" 
		               ref="cyNetworkViewReaderManager" />
	</osgi:set>

	<osgi:set id="cyDataTableReaderFactories" 
	          interface="org.cytoscape.io.read.InputStreamTaskFactory"
	          cardinality="0..N">
		<osgi:listener bind-method="addInputStreamTaskFactory"
		               unbind-method="removeInputStreamTaskFactory" 
		               ref="cyDataTableReaderManager" />
	</osgi:set>

	<osgi:set id="sessionReaderFactories" 
	          interface="org.cytoscape.io.read.InputStreamTaskFactory"
	          cardinality="0..N">
		<osgi:listener bind-method="addInputStreamTaskFactory"
		               unbind-method="removeInputStreamTaskFactory" 
		               ref="cySessionReaderManager" />
	</osgi:set>

	<osgi:set id="viewWriterFactories" 
	          interface="org.cytoscape.io.write.ViewWriterFactory"
	          cardinality="0..N">
		<osgi:listener bind-method="addCyWriterFactory"
		               unbind-method="removeCyWriterFactory" 
		               ref="viewWriterManager" />
	</osgi:set>

	<osgi:set id="networkViewWriterFactories" 
	          interface="org.cytoscape.io.write.CyNetworkViewWriterFactory"
	          cardinality="0..N">
		<osgi:listener bind-method="addCyWriterFactory"
		               unbind-method="removeCyWriterFactory" 
		               ref="networkViewWriterManager" />
	</osgi:set>

	<osgi:set id="sessionWriterFactories" 
	          interface="org.cytoscape.io.write.SessionWriterFactory"
	          cardinality="0..N">
		<osgi:listener bind-method="addCyWriterFactory"
		               unbind-method="removeCyWriterFactory" 
		               ref="sessionWriterManager" />
	</osgi:set>
</beans>
