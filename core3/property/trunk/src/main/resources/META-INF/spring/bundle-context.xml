<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:lang="http://www.springframework.org/schema/lang" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop 
			http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://www.springframework.org/schema/context 
			http://www.springframework.org/schema/context/spring-context-2.5.xsd
		http://www.springframework.org/schema/util 
			http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.springframework.org/schema/lang 
			http://www.springframework.org/schema/lang/spring-lang-2.5.xsd
		http://www.springframework.org/schema/osgi 
			http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd"
	default-lazy-init="false">


	<!-- Example: export different types of properties as OSGi services -->

	<!-- Cytoscape Core Properties (cytoscape.props) -->
	<util:properties id="coreProperties" location="classpath:cytoscape.props" />

	<!-- Wrap it with CyProperties interface. -->
	<bean id="coreCyProp" class="org.cytoscape.property.DefaultCyProperty">
		<!-- Inject java.util.Properties bean -->
		<constructor-arg ref="coreProperties" />
	</bean>

	<bean id="bookmarkFactory"
		class="org.cytoscape.property.internal.bookmark.BookmarkFactory">
		<constructor-arg value="bookmarks.xml" />
	</bean>
	<bean id="bookmarks" factory-bean="bookmarkFactory"
		factory-method="createProperty">
	</bean>

	<bean id="bookmarksUtil"
		class="org.cytoscape.property.internal.bookmark.BookmarksUtilImpl" />

</beans>
