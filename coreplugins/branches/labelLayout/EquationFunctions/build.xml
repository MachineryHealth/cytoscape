<!-- =============================================================== -->
<!-- EquationFunctions plugin (EquationFunctions.jar) build file     -->
<!-- =============================================================== -->

<project name="EquationFunctions" default="EquationFunctions" basedir=".">

  <!-- =================================================================== -->
  <!-- Initialization target                                               -->
  <!-- =================================================================== -->
  <target name="init-EquationFunctions">
    <tstamp/>
    <property name="EquationFunctions.Name" value="EquationFunctions"/>
    <property name="EquationFunctions.name" value="EquationFunctions"/>
    <property name="EquationFunctions.version" value="1.0"/>
    <property name="EquationFunctions.year" value="2010"/>
    
    <echo message="Building ${EquationFunctions.name} version ${EquationFunctions.version}."/>

    <!-- Inheritable properties -->
    <property name="debug" value="off"/>
    <property name="optimize" value="on"/>
    <property name="deprecation" value="on"/>
    <property name="nowarn" value="true"/>
    <property name="fork" value="false"/>
    <property name="EquationFunctions.root.dir" value="."/>
    <property name="EquationFunctions.lib.dir" value="${EquationFunctions.root.dir}/lib"/>
    
    <property name="cytoscape.dir" value="../../eqn_attribs"/>
    <property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib"/>
    <property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins"/>

    <path id="project.class.path">
      <pathelement path="${java.class.path}/"/>
    </path>

    <!-- Define the directories -->
    <property name="EquationFunctions.root.dir" value="./"/>
    <property name="EquationFunctions.src.dir" value="${EquationFunctions.root.dir}/src"/>
    <property name="EquationFunctions.classes.dir" value="${EquationFunctions.root.dir}/classes"/>
    <property name="EquationFunctions.javadoc.dir" value="${javadoc.dir}/EquationFunctions"/>
    <property name="EquationFunctions.resources.dir" value="${EquationFunctions.root.dir}/resources"/>
    <property name="EquationFunctions.manifest.dir" value="${EquationFunctions.root.dir}/manifest"/>
    <property name="EquationFunctions.packages" value="EquationFunctions.*"/>
    <!-- Subdirectory for test reports -->
    <property name="EquationFunctions.tests.reports.dir" value="${EquationFunctions.root.dir}/reports/tests" />
    <property name="cytoscape.lib" value="${cytoscape.dir}/lib" />

    <!-- Define the condition for compilation -->
    <property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar"/>
    <property name="equations.jar" value="${cytoscape.lib.dir}/equations.jar"/>
    
    <condition property="cytoscape.present">
      <and> 
	<available file="${cytoscape.jar}"/> 
	<available file="${equations.jar}"/> 
      </and>
    </condition>

    <!-- Define excludes for EquationFunctions compile and javadoc -->
    <property name="EquationFunctions.excludes" value="**/notyet/*"/>
    <property name="EquationFunctions.tests.excludes" value="**/notyet/*"/>
    <property name="EquationFunctions.packages.excludes" value="**.test.*,**.notyet.*"/>

    <path id="EquationFunctions.project.class.path">
      <pathelement location="${EquationFunctions.classes.dir}"/>
      <pathelement location="${cytoscape.lib.dir}/equations.jar"/>
      <pathelement location="${cytoscape.dir}/cytoscape.jar"/>
      <pathelement path="${project.class.path}/"/>
    </path>

  </target>

  <!-- =================================================================== -->
  <!-- Compiles the EquationFunctions project                                           -->
  <!-- =================================================================== -->
  <target name="compile-EquationFunctions" depends="init-EquationFunctions"  >

    <echo message=" COMPILE EquationFunctions "/>

    <mkdir dir="${EquationFunctions.classes.dir}"/>
    <javac srcdir="${EquationFunctions.src.dir}"
           excludes="${EquationFunctions.excludes}"
           classpathref="EquationFunctions.project.class.path"
           destdir="${EquationFunctions.classes.dir}"
           debug="${debug}"
           nowarn="${nowarn}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
	   source="1.5"
	   target="1.5"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the EquationFunctions.jar file                                           -->
  <!-- =================================================================== -->
  <target name="EquationFunctions" depends="compile-EquationFunctions"  >
    <copy todir="${EquationFunctions.classes.dir}/org/cytoscape/EquationFunctions" file="${EquationFunctions.resources.dir}/plugin.props"/>
    <jar destfile="EquationFunctions.jar" manifest="${EquationFunctions.manifest.dir}/EquationFunctions.manifest">
      <fileset
         dir="${EquationFunctions.classes.dir}"
         includes="**"/>
      <fileset
         dir="${EquationFunctions.root.dir}/lib"
         includes="resources/**"/>
      <manifest>
	<attribute name="Cytoscape-Plugin" value="org.cytoscape.EquationFunctions.EquationFunctionsPlugin"/>
      </manifest>
    </jar>
    <copy todir="${EquationFunctions.lib.dir}" file="EquationFunctions.jar"/>
  </target>

  <!-- =================================================================== -->
  <!-- Compiles the EquationFunctions tests                                             -->
  <!-- =================================================================== -->
  <target name="compile-tests" depends="EquationFunctions"  >
    <mkdir dir="${EquationFunctions.classes.dir}"/>
    <javac srcdir="${EquationFunctions.src.dir}"
           includes="**/test/*"
           excludes="${EquationFunctions.tests.excludes}"
           classpathref="EquationFunctions.project.class.path"
           destdir="${EquationFunctions.classes.dir}"
           debug="${debug}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the EquationFunctions-tests.jar file                                     -->
  <!-- =================================================================== -->
  <target name="tests" depends="compile-tests"  >
    <jar jarfile="EquationFunctions-tests.jar"
         basedir="${EquationFunctions.classes.dir}"
         includes="**/test/*"/>
  </target>

  <!-- =================================================================== -->
  <!-- Build all jars                                                      -->
  <!-- =================================================================== -->
  <target name="all" depends="EquationFunctions"/>

  <!-- =================================================================== -->
  <!-- Run the Plugin                                                      -->
  <!-- =================================================================== -->
  <target name="run" depends="EquationFunctions" >
    
    <java classname="cytoscape.cytoscape" 
          classpathref="EquationFunctions.project.class.path"
          fork="true"/>
    <arg line = "-p ${EquationFunctions.lib.dir}/EquationFunctions.jar"/>
    

  </target>


  <!-- =================================================================== -->
  <!-- Runs the tests in EquationFunctions-tests.jar                                    -->
  <!-- =================================================================== -->
  <target name="runtests" depends="tests"  >
    <mkdir dir="${EquationFunctions.tests.reports.dir}"/>
    <junit
       printsummary="yes"
       haltonfailure="no"
       dir="${EquationFunctions.classes.dir}"
       maxmemory="1G"
       >
      <formatter type="plain" usefile="true" />
      <classpath refid="EquationFunctions.project.class.path"/>
      <!-- The junit task doesn't support 'if' so we test for JUnit here -->
      <batchtest fork="yes" todir="${EquationFunctions.tests.reports.dir}" if="junit.present">
        <fileset
           dir="${EquationFunctions.classes.dir}"
           includes="**/test/*"
           excludes="${EquationFunctions.tests.excludes}"
           />
      </batchtest>
    </junit>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the API documentation                                       -->
  <!-- =================================================================== -->
  <target name="docs" depends="init-EquationFunctions" >
    <mkdir dir="${EquationFunctions.javadoc.dir}"/>
    <javadoc packagenames="${EquationFunctions.packages}"
             excludepackagenames="${EquationFunctions.packages.excludes}"
             sourcepath="${EquationFunctions.src.dir}"
             destdir="${EquationFunctions.javadoc.dir}"
             classpathref="EquationFunctions.project.class.path"
             author="true"
             version="true"
             use="true"
             splitindex="true"
             noindex="false"
             windowtitle="${EquationFunctions.Name} API"
             doctitle="${EquationFunctions.Name}"
	     />
  </target>
  
  <!-- =================================================================== -->
  <!-- Clean up, get back to original state                                -->
  <!-- =================================================================== -->
  <target name="clean" depends="init-EquationFunctions">
    <delete dir="${EquationFunctions.classes.dir}"/>
    <delete file="EquationFunctions.jar"/>
    <delete file="${EquationFunctions.lib.dir}/EquationFunctions.jar"/>
    <delete file="EquationFunctions-tests.jar"/>
  </target>

</project>

<!-- End of file -->
