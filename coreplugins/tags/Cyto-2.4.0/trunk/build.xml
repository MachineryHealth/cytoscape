<!-- A simple project to recursively build all coreplugin projects. -->
<project name="coreplugins" default="all" basedir=".">

	<!-- Basic initialization.  -->
	<target name="init">
		<property name="build.dir" value="build" />
	</target>

	<!-- Build all coreplugin projects  -->
	<target name="all" depends="init">
		<ant dir="browser" />
		<ant dir="ManualLayout" />
		<ant dir="RFilters" />
		<ant dir="yfiles" />
		<ant dir="CytoscapeEditor2" />
		<ant dir="AutomaticLayout" />
		<ant dir="GraphMerge" />
		<ant dir="QuickFind" />
		<ant dir="BioPAX" />
		<ant dir="PSI-MI" />
		<ant dir="SBMLReader" />
		<ant dir="cPath" />
		<ant dir="TableImport" />
		<ant dir="linkout" />
		
		<mkdir dir="${build.dir}" />
		<copy todir="${build.dir}" file="browser/browser.jar" />
		<copy todir="${build.dir}" file="ManualLayout/ManualLayout.jar" />
		<copy todir="${build.dir}" file="RFilters/filter.jar" />
		<copy todir="${build.dir}" file="yfiles/yLayouts.jar" />
		<copy todir="${build.dir}" file="CytoscapeEditor2/CytoscapeEditor.jar" />
		<copy todir="${build.dir}" file="AutomaticLayout/AutomaticLayout.jar" />
		<copy todir="${build.dir}" file="GraphMerge/GraphMerge.jar" />
		<copy todir="${build.dir}" file="QuickFind/plugins/quick_find.jar" />
		<copy todir="${build.dir}" file="BioPAX/build/jars/biopax.jar" />
		<copy todir="${build.dir}" file="PSI-MI/build/jars/psi_mi.jar" />
		<copy todir="${build.dir}" file="SBMLReader/SBMLReader.jar" />
		<copy todir="${build.dir}" file="cPath/plugins/cPath.jar" />
		<copy todir="${build.dir}" file="TableImport/TableImport.jar" />
		<copy todir="${build.dir}" file="linkout/linkout.jar" />
	</target>

	<!-- clean all coreplugin projects  -->
	<target name="clean" depends="init">
		<ant dir="browser" target="clean" />
		<ant dir="ManualLayout" target="clean" />
		<ant dir="RFilters" target="clean" />
		<ant dir="yfiles" target="clean" />
		<ant dir="CytoscapeEditor2" target="clean" />
		<ant dir="AutomaticLayout" target="clean" />
		<ant dir="GraphMerge" target="clean" />
		<ant dir="QuickFind" target="clean" />
		<ant dir="BioPAX" target="clean" />
		<ant dir="PSI-MI" target="clean" />
		<ant dir="SBMLReader" target="clean" />
		<ant dir="cPath" target="clean" />
		<ant dir="TableImport" target="clean" />
		<ant dir="linkout" target="clean" />
		<delete dir="${build.dir}" />
	</target>

</project>
