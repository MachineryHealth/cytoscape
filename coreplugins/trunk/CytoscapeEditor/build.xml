<!-- =================================================================== -->
<!-- CytoscapeEditor plugin (CytoscapeEditor.jar) build file (Eclipse 3.1)     -->
<!-- =================================================================== -->

	<project name="CytoscapeEditor" default="editor" basedir=".">

  <!-- =================================================================== -->
  <!-- Initialization target                                               -->
  <!-- =================================================================== -->
  <target name="init-editor">
    <tstamp/>
    <property name="editor.Name" value="editor"/>
    <property name="editor.name" value="editor"/>
    <property name="editor.version" value="1.1"/>
    <property name="editor.year" value="200"/>

    <echo message="Building ${editor.name} version ${editor.version}."/>

    <!-- Inheritable properties -->
    <property name="debug" value="on"/>
    <property name="optimize" value="off"/>

    <property name="deprecation" value="on"/>
    <property name="nowarn" value="true"/>
    <property name="fork" value="false"/>
    <property name="editor.root.dir" value="."/>
    <property name="editor.lib.dir" value="${editor.root.dir}/lib"/>
  	
  	
  	<!-- You need to modify this line to point to Cytoscape directory.  -->
<!--    <property name="cytoscape.dir" value="${editor.root.dir}/../../cytoscape"/>
        AJK: 03/05/2006: we have 3 levels, pre-core-plugins, cs-plugins, code
-->     <property name="cytoscape.dir" value="${editor.root.dir}/../../../cytoscape"/>
  	
  	
  	
    <property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib"/>
    <property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins"/>
    <path id="project.class.path">
      <pathelement path="${java.class.path}/"/>
    </path>

    <!-- Define the directories -->
    <property name="editor.root.dir" value="./"/>
    <property name="editor.src.dir" value="${editor.root.dir}/src"/>
    <property name="editor.classes.dir" value="${editor.root.dir}/classes"/>
    <property name="editor.javadoc.dir" value="${javadoc.dir}/editor"/>
    <property name="editor.resources.dir" value="${editor.root.dir}/resources"/>
    <property name="editor.manifest.dir" value="${editor.root.dir}/manifest"/>
    <property name="editor.packages" value="cytoscape.editor.*"/>
    <!-- Subdirectory for test reports -->
    <property name="editor.tests.reports.dir" value="${editor.root.dir}/reports/tests" />
    <property name="cytoscape.lib" value="${cytoscape.dir}/lib" />

    <!-- Define the condition for compilation -->
    <property name="cytoscape.jar" value="${editor.lib.dir}/cytoscape.jar"/>
    <property name="colt.jar" value="${editor.lib.dir}/colt.jar"/>
    
    <condition property="cytoscape.present">
      <and> 
	  		<available file="${cytoscape.jar}"/> 
				<available file="${colt.jar}"/> 
		  </and>
    </condition>

    <!-- Define excludes for editor compile and javadoc -->
    <property name="editor.excludes" value="**/notyet/*"/>
    <property name="editor.tests.excludes" value="**/notyet/*"/>
    <property name="editor.packages.excludes" value="**.test.*,**.notyet.*"/>

    <path id="editor.project.class.path">
      <pathelement location="${editor.classes.dir}"/>
      <pathelement location="${cytoscape.plugin.dir}/core/filter.jar"/>
      <pathelement location="${cytoscape.lib.dir}/colt.jar"/>
      <pathelement location="${cytoscape.lib.dir}/coltginy.jar"/>
      <pathelement location="${cytoscape.dir}/cytoscape.jar"/>
      <pathelement location="${cytoscape.lib.dir}/giny.jar"/>
      <pathelement location="${cytoscape.lib.dir}/tclib.jar"/>
      <pathelement location="${cytoscape.lib.dir}/glf.jar"/>
      <pathelement location="${cytoscape.lib.dir}/com-nerius-math-xform.jar"/> 
      <pathelement location="${cytoscape.lib.dir}/concurrent.jar"/>
      <pathelement location="${cytoscape.plugin.dir}/core/exesto.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape-graph-dynamic.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape-graph-fixed.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape-graph-layout.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape-graph-legacy.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape-task.jar"/>
      <pathelement location="${cytoscape.lib.dir}/violinstrings-1.0.2.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape-util-intr.jar"/>
      <pathelement location="${cytoscape.lib.dir}/fing.jar"/>
      <pathelement location="${cytoscape.lib.dir}/phoebe.jar"/>
      <pathelement location="${cytoscape.lib.dir}/piccolo.jar"/>
      <pathelement location="${cytoscape.lib.dir}/piccolox.jar"/>    
        <pathelement location="${editor.lib.dir}/biopax_core_0_4.jar"/>    
      <pathelement path="${project.class.path}/"/>
    </path>

  

  </target>

  <!-- =================================================================== -->
  <!-- Compiles the editor project                                           -->
  <!-- =================================================================== -->
  <target name="compile-editor" depends="init-editor"  >

   <echo message=" COMPILE editor "/>

    <mkdir dir="${editor.classes.dir}"/>
    <javac srcdir="${editor.src.dir}"
           excludes="${editor.excludes}"
           classpathref="editor.project.class.path"
           destdir="${editor.classes.dir}"
           debug="${debug}"
           nowarn="${nowarn}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the CytoscapeEditor.jar file                                           -->
  <!-- =================================================================== -->
  <target name="editor" depends="compile-editor"  >
  	
    <unjar dest="${editor.classes.dir}">
        <fileset dir="${editor.lib.dir}"
        includes="biopax_core_0_4.jar"/>
       </unjar>
 	
    <jar destfile="CytoscapeEditor.jar" manifest="${editor.manifest.dir}/editor.manifest">
 
    	<fileset
        dir="${editor.classes.dir}"
        includes="**"/>
      <fileset
        dir="${editor.root.dir}/lib"
        includes="resources/**"/>
 
    </jar>
    <copy todir="${editor.lib.dir}" file="CytoscapeEditor.jar"/>
    <copy todir="${cytoscape.plugin.dir}/core" file="CytoscapeEditor.jar"/>
  </target>

  <!-- =================================================================== -->
  <!-- Compiles the editor tests                                             -->
  <!-- =================================================================== -->
  <target name="compile-tests" depends="editor"  >
    <mkdir dir="${editor.classes.dir}"/>
    <javac srcdir="${editor.src.dir}"
           includes="**/test/*"
           excludes="${editor.tests.excludes}"
           classpathref="editor.project.class.path"
           destdir="${editor.classes.dir}"
           debug="${debug}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the editor-tests.jar file                                     -->
  <!-- =================================================================== -->
  <target name="tests" depends="compile-tests"  >
    <jar jarfile="editor-tests.jar"
         basedir="${editor.classes.dir}"
         includes="**/test/*"/>
  </target>

  <!-- =================================================================== -->
  <!-- Build all jars                                                      -->
  <!-- =================================================================== -->
  <target name="all" depends="editor"/>

   <!-- =================================================================== -->
  <!-- Run the Plugin                                                      -->
  <!-- =================================================================== -->
  <target name="run" depends="editor" >
     
     <java classname="cytoscape.cytoscape" 
           classpathref="editor.project.class.path"
           fork="true"/>
           <arg line = "-p ${editor.lib.dir}/CytoscapeEditor.jar"/>
           

  </target>


  <!-- =================================================================== -->
  <!-- Runs the tests in editor-tests.jar                                    -->
  <!-- =================================================================== -->
  <target name="runtests" depends="tests"  >
    <mkdir dir="${editor.tests.reports.dir}"/>
    <junit
       printsummary="yes"
       haltonfailure="no"
       dir="${editor.classes.dir}"
       maxmemory="1G"
    >
      <formatter type="plain" usefile="true" />
      <classpath refid="editor.project.class.path"/>
      <!-- The junit task doesn't support 'if' so we test for JUnit here -->
      <batchtest fork="yes" todir="${editor.tests.reports.dir}" if="junit.present">
        <fileset
           dir="${editor.classes.dir}"
           includes="**/test/*"
           excludes="${editor.tests.excludes}"
        />
      </batchtest>
    </junit>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the API documentation                                       -->
  <!-- =================================================================== -->
  <target name="docs" depends="init-editor" >
    <mkdir dir="${editor.javadoc.dir}"/>
    <javadoc packagenames="${editor.packages}"
             excludepackagenames="${editor.packages.excludes}"
             sourcepath="${editor.src.dir}"
             destdir="${editor.javadoc.dir}"
             classpathref="editor.project.class.path"
             author="true"
             version="true"
             use="true"
             splitindex="true"
             noindex="false"
             windowtitle="${editor.Name} API"
             doctitle="${editor.Name}"
    />
  </target>
 
  <!-- =================================================================== -->
  <!-- Clean up, get back to original state                                -->
  <!-- =================================================================== -->
  <target name="clean" depends="init-editor">
    <delete dir="${editor.classes.dir}"/>
    <delete file="editor.jar"/>
    <delete file="editor-tests.jar"/>
  </target>

</project>

<!-- End of file -->
