<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cytoscape</groupId>
	<artifactId>app</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Cytoscape App</name>
	<url>http://maven.apache.org</url>

	<organization>
		<name>Cytoscape</name>
		<url>http://cytoscape.org</url>
	</organization>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl.html</url>
			<distribution>repo</distribution>
			<comments>LGPL</comments>
		</license>
	</licenses>

	<issueManagement>
		<system>Mantis</system>
		<url>http://cbio.mskcc.org/cytoscape/bugs/main_page.php</url>
	</issueManagement>

	<!-- not sure how this part works yet, can you use it to get code checked out?? -->
	<scm>
		<connection>scm:svn:http://chianti.ucsd.edu/svn/cytoscape3/trunk</connection>
		<developerConnection>scm:svn:http://chianti.ucsd.edu/svn/cytoscape3/trunk</developerConnection>
		<tag>HEAD</tag>
		<url>http://chianti.ucsd.edu/svn/cytoscape3/trunk</url>
	</scm>

	<!-- requires maven 2.0.4 ? -->
	<prerequisites>
		<maven>2.0.4</maven>
	</prerequisites>

	<repositories>
		<!-- for biojava -->
		<repository>
			<id>wwmm</id>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<name>Murray-Rust Research Group</name>
			<url>http://wwmm.ch.cam.ac.uk/maven2</url>
		</repository>
	</repositories>


	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>



	<modules>
		<module>model</module>
		<module>io</module>
		<module>view</module>
		<module>command</module>
		<module>application</module>
	</modules>
</project>
