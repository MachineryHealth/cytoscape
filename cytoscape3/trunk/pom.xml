<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cytoscape</groupId>
	<artifactId>cytoscape</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Cytoscape</name>
	<url>http://maven.apache.org</url>

	<organization>
		<name>Cytoscape</name>
		<url>http://cytoscape.org</url>
	</organization>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl.html</url>
			<distribution>repo</distribution>
			<comments>LGPL</comments>
		</license>
	</licenses>

	<issueManagement>
		<system>Mantis</system>
		<url>http://cbio.mskcc.org/cytoscape/bugs/main_page.php</url>
	</issueManagement>

	<repositories>
		<!-- for biojava -->
		<repository>
			<id>wwmm</id>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<name>Murray-Rust Research Group</name>
			<url>http://wwmm.ch.cam.ac.uk/maven2</url>
		</repository>
		
		<repository>
  		<id>maven2-repository.dev.java.net</id>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		  <name>Java.net Repository for Maven</name>
		  <url>http://download.java.net/maven/2/</url>
		  <layout>default</layout>
		</repository>
	</repositories>



	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<!-- Core libraries -->
		<module>commons.cli</module>
		<module>nerius.math.xform</module>
		<module>util.intr</module>
		<module>graph.fixed</module>
		<module>graph.dynamic</module>
		<module>geom.spacial</module>
		<module>geom.rtree</module>
		<module>undo</module>
		<module>task</module>
		<module>render.immed</module>
		<module>render.stateful</module>
		<module>render.export</module>
		<module>phoebe.dnd</module>
    <module>cruft.obo</module>
		<module>session</module>
		<!-- Cytoscape Application -->
		<module>network</module>
  </modules>


</project>