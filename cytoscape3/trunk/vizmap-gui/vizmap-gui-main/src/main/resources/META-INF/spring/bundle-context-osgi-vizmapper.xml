<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd"
	default-lazy-init="false">


	<osgi:reference id="streamUtilServiceRef" interface="org.cytoscape.io.util.StreamUtil" />

	<!-- Import Context (to access properties)  -->
	<osgi:reference id="cyOperatingContextServiceRef"
		interface="cytoscape.CyOperatingContext" />

	<!-- Import Desktop Service -->
	<osgi:reference id="cytoscapeDesktopServiceRef"
		interface="cytoscape.view.CySwingApplication" />

	<!-- Visual Mapping Manager Service -->
	<osgi:reference id="vmmServiceRef"
		interface="org.cytoscape.vizmap.VisualMappingManager" />

	<!-- Network Manager -->
	<osgi:reference id="cyNetworkManagerServiceRef"
		interface="cytoscape.CyNetworkManager" />

	<!-- Reference to the network factory service -->
	<osgi:reference id="cyNetworkFactoryServiceRef"
		interface="org.cytoscape.model.CyNetworkFactory">
	</osgi:reference>

	<osgi:reference id="graphViewFactoryServiceRef"
		interface="org.cytoscape.view.GraphViewFactory">
	</osgi:reference>

	<osgi:reference id="fileUtilServiceRef" interface="cytoscape.util.FileUtil">
	</osgi:reference>


	<!-- Pull-down menu items -->
	<osgi:service id="createNewStyleActionService" ref="createNewStyleAction"
		interface="org.cytoscape.vizmap.gui.action.VizMapUIAction" />
	<osgi:service id="removeStyleActionService" ref="removeStyleAction"
		interface="org.cytoscape.vizmap.gui.action.VizMapUIAction" />
	<osgi:service id="renameStyleActionService" ref="renameStyleAction"
		interface="org.cytoscape.vizmap.gui.action.VizMapUIAction" />
	<osgi:service id="copyStyleActionService" ref="copyStyleAction"
		interface="org.cytoscape.vizmap.gui.action.VizMapUIAction" />
	<osgi:service id="createLegendActionService" ref="createLegendAction"
		interface="org.cytoscape.vizmap.gui.action.VizMapUIAction" />

	<!-- Mapping generator services -->
	<osgi:service id="rainbowGeneratorService" ref="rainbowGenerator"
		interface="org.cytoscape.vizmap.gui.util.DiscreteValueMapGenerator">
		<osgi:service-properties>
			<entry key="service.type" value="vizmapUI.contextMenu" />
		</osgi:service-properties>
	</osgi:service>
	<osgi:service id="rainbowOscGeneratorService" ref="rainbowOscGenerator"
		interface="org.cytoscape.vizmap.gui.util.DiscreteValueMapGenerator">
		<osgi:service-properties>
			<entry key="service.type" value="vizmapUI.contextMenu" />
		</osgi:service-properties>
	</osgi:service>
	<osgi:service id="randomColorGeneratorService" ref="randomColorGenerator"
		interface="org.cytoscape.vizmap.gui.util.DiscreteValueMapGenerator">
		<osgi:service-properties>
			<entry key="service.type" value="vizmapUI.contextMenu" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:service id="removeMappingActionService" ref="removeMappingAction"
		interface="org.cytoscape.vizmap.gui.action.VizMapUIAction">
		<osgi:service-properties>
			<entry key="service.type" value="vizmapUI.contextMenu" />
		</osgi:service-properties>
	</osgi:service>

	<osgi:set id="vizMapperActionServiceRef" interface="org.cytoscape.vizmap.gui.action.VizMapUIAction"
		cardinality="0..N">
		<osgi:listener bind-method="onBind" unbind-method="onUnbind"
			ref="menuManager" />
	</osgi:set>


	<!-- visual property editor services -->

	<osgi:service id="continuousColorService" ref="continuousColor"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="continuousContinuousService" ref="continuousContinuous"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="continuousDiscreteService" ref="continuousDiscrete"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteArrowShapeService" ref="discreteArrowShape"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteColorService" ref="discreteColor"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteFontService" ref="discreteFont"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteLabelPositionService" ref="discreteLabelPosition"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteLineStyleService" ref="discreteLineStyle"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteNodeShapeService" ref="discreteNodeShape"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteNumberService" ref="discreteNumber"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />
	<osgi:service id="discreteStringService" ref="discreteString"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer" />

	<osgi:set id="editorSet"
		interface="org.cytoscape.vizmap.gui.editors.EditorDisplayer"
		cardinality="0..N">
		<osgi:listener bind-method="addEditorDisplayer"
			unbind-method="removeEditorDisplayer" ref="editorFactory" />
	</osgi:set>

	<osgi:service
		id="vizMapBypassNetworkListenerNetworkViewAddedListenerService" ref="vizMapBypassNetworkListener"
		interface="cytoscape.events.NetworkViewAddedListener" />

</beans>
