<?xml version="1.0"?><project>
  <parent>
    <artifactId>cytoscape</artifactId>
    <groupId>cytoscape</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>cytoscape</groupId>
  <artifactId>editor</artifactId>
  <name>editor</name>
  <packaging>bundle</packaging>
  <version>1.0-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <dependencies>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>cytoscape</groupId>
      <artifactId>application</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>phoebe</groupId>
      <artifactId>phoebe.dnd</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
        <!-- for OSGi activator -->
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi_R4_core</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi_R4_compendium</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>

  </dependencies>

	<build>
      <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Activator>cytoscape.editor.CytoscapeEditorPlugin</Bundle-Activator>
                        <Private-Package>cytoscape.editor.*</Private-Package>
                    </instructions>
                </configuration>
         </plugin>
      </plugins>
	</build>
</project>
