<!-- =================================================================== -->
<!-- NCBI Web Service Client plugin (NCBIClient.jar) build file     
			08/29/2007 Written by Keiichiro Ono (kono@ucsd.edu)       -->
<!-- =================================================================== -->

<project name="cyTScanner" default="cyTScanner" basedir="." >

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init-cyTScanner">
		<tstamp />
		<property name="cyTScanner.Name" value="Network Library Plugin" />
		<property name="cyTScanner.name" value="cyTScanner" />
		<property name="cyTScanner.version" value="0.01" />
		<property name="cyTScanner.year" value="200" />

		<echo message="Building ${cyTScanner.name} version ${cyTScanner.version}." />

		<!-- Inheritable properties -->
		<property name="debug" value="on" />
		<property name="optimize" value="off" />
		<property name="deprecation" value="on" />
		<property name="nowarn" value="true" />
		<property name="fork" value="false" />
		<property name="cyTScanner.root.dir" value="." />

		<!-- You need to modify this line to point to Cytoscape directory.  -->
		<property name="cytoscape.dir" value="${cyTScanner.root.dir}/../cytoscape_customGraphics" />

		<property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib" />
		<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins" />
		<property name="cytoscape.build.dir" value="${cytoscape.dir}/build/cytoscape-v2.7.0" />

		<!-- JUnit report directory -->
		<property name="junit.report.dir" value="${cyTScanner.root.dir}/junit-reports" />

		<path id="project.class.path">
			<pathelement path="${java.class.path}/" />
		</path>

		<!-- Define the directories -->
		<property name="cyTScanner.root.dir" value="./" />
		<property name="cyTScanner.src.dir" value="${cyTScanner.root.dir}/src" />
		<property name="cyTScanner.lib.dir" value="${cyTScanner.root.dir}/lib" />
		<property name="cyTScanner.tests.dir" value="${cyTScanner.root.dir}/tests" />
		<property name="cyTScanner.classes.dir" value="${cyTScanner.root.dir}/classes" />
		<property name="cyTScanner.testclasses.dir" value="${cyTScanner.root.dir}/testClasses" />
		<property name="cyTScanner.javadoc.dir" value="${javadoc.dir}/cyTScanner" />
		<property name="cyTScanner.resources.dir" value="${cyTScanner.root.dir}/resources" />
		<property name="cyTScanner.manifest.dir" value="${cyTScanner.root.dir}/manifest" />
		<property name="cyTScanner.packages" value="cyTScanner.*" />
		<!-- Subdirectory for test reports -->
		<property name="cyTScanner.tests.reports.dir" value="${cyTScanner.root.dir}/reports/tests" />

		<!-- Define the condition for compilation -->
		<property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar" />

		<condition property="cytoscape.present">
			<and>
				<available file="${cytoscape.jar}" />
			</and>
		</condition>

		<!-- Define excludes for cyTScanner compile and javadoc -->
		<property name="cyTScanner.excludes" value="**/notyet/*" />
		<property name="cyTScanner.tests.excludes" value="**/notyet/*" />
		<property name="cyTScanner.packages.excludes" value="**.test.*,**.notyet.*" />

		<path id="cyTScanner.project.class.path">
			<pathelement location="${cyTScanner.classes.dir}" />
			<pathelement path="${cyTScanner.root.dir}/cyTScannerTests.jar/" />
			<fileset dir="${cyTScanner.lib.dir}">
				<include name="*.jar" />
			</fileset>

			<fileset dir="${cytoscape.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}/build-libs">
				<include name="*.jar" />
			</fileset>
		</path>


	</target>

	<!-- =================================================================== -->
	<!-- Clean up, get back to original state                                -->
	<!-- =================================================================== -->
	<target name="clean" depends="init-cyTScanner">
		<delete dir="${cyTScanner.classes.dir}" />
		<delete dir="${cyTScanner.testclasses.dir}" />
		<delete dir="${cyTScanner.tests.reports.dir}" />
		<delete file="cyTScanner.jar" />
		<delete file="${cyTScanner.lib.dir}/cyTScanner.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the cyTScanner project                                           -->
	<!-- =================================================================== -->
	<target name="compile-cyTScanner" depends="init-cyTScanner">

		<echo message=" COMPILE cyTScanner " />

		<mkdir dir="${cyTScanner.classes.dir}" />
		<javac srcdir="${cyTScanner.src.dir}" 
			excludes="${cyTScanner.excludes}" 
			classpathref="cyTScanner.project.class.path" 
			destdir="${cyTScanner.classes.dir}" 
			source="1.5" 
			target="1.5"
			debug="${debug}" 
			nowarn="${nowarn}" 
			deprecation="${deprecation}" 
			optimize="${optimize}" 
			fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the cyTScanner.jar file                                           -->
	<!-- =================================================================== -->
	<target name="cyTScanner" depends="compile-cyTScanner">
		<!-- copy over images -->
		<copy todir="${cyTScanner.classes.dir}/images">
			<fileset dir="${cyTScanner.root.dir}/images" />
		</copy>

		<copy todir="${cyTScanner.classes.dir}/org/cytoscape/db/" file="${cyTScanner.manifest.dir}/plugin.props" />

		<unjar dest="${cyTScanner.classes.dir}">
			<fileset dir="${cyTScanner.lib.dir}">
				<include name="*.jar" />

				<exclude name="cyTScanner.jar" />
				<exclude name="cyTScannerTest.jar" />
			</fileset>

		</unjar>
		<jar destfile="cyTScanner.jar" manifest="${cyTScanner.manifest.dir}/cyTScanner.manifest">
			<fileset dir="${cyTScanner.classes.dir}" includes="**" />
			<fileset dir="${cyTScanner.root.dir}/lib" includes="resources/**" />
		</jar>

	</target>

	<!-- =================================================================== -->
	<!-- release                                             -->
	<!-- =================================================================== -->
	<target name="release" depends="testAll">
		<copy todir="${cyTScanner.lib.dir}" file="cyTScanner.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the cyTScanner tests                                             -->
	<!-- =================================================================== -->
	<target name="compile-tests" depends="cyTScanner">
		<mkdir dir="${cyTScanner.testclasses.dir}" />
		<javac srcdir="${cyTScanner.tests.dir}" includes="**/*" classpathref="cyTScanner.project.class.path" destdir="${cyTScanner.testclasses.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the ncbiClientTests.jar file                                     -->
	<!-- =================================================================== -->
	<target name="tests" depends="compile-tests">
		<jar jarfile="cyTScannerTests.jar" basedir="${cyTScanner.testclasses.dir}" includes="**/*" />
	</target>

	<!-- =================================================================== -->
	<!-- Build all jars                                                      -->
	<!-- =================================================================== -->
	<target name="all" depends="cyTScanner" />

	<!-- =================================================================== -->
	<!-- Run the Plugin                                                      -->
	<!-- =================================================================== -->
	<target name="run" depends="cyTScanner">
		<java classname="cytoscape.cytoscape" classpathref="cyTScanner.project.class.path" fork="true" />
		<arg line="-p ${cyTScanner.lib.dir}/cyTScanner.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Runs the tests in ncbiClientTests.jar                                    -->
	<!-- =================================================================== -->
	<target name="runtests" depends="tests">
		<mkdir dir="${cyTScanner.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" dir="${cyTScanner.classes.dir}" maxmemory="1G">
			<formatter type="plain" usefile="true" />
			<classpath refid="cyTScanner.project.class.path" />
			<!-- The junit task doesn't support 'if' so we test for JUnit here -->
			<batchtest fork="yes" todir="${cyTScanner.tests.reports.dir}" if="junit.present">
				<fileset dir="${cyTScanner.classes.dir}" includes="**/test/*" excludes="${cyTScanner.tests.excludes}" />
			</batchtest>
		</junit>
	</target>

	<!-- ======================================================= -->
	<!-- Run all of the Swing Unit Tests                       -->
	<!-- ======================================================= -->
	<target name="test-swing" depends="cyTScanner">
		<mkdir dir="${cyTScanner.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="1G" filtertrace="off" includeantruntime="true" showoutput="on">

			<classpath>
				<fileset dir="${cyTScanner.root.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cyTScanner.root.dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}/build-libs">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cyTScanner.root.dir}/testClasses">
					<include name="**/*" />
				</fileset>
			</classpath>
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${cyTScanner.tests.reports.dir}">
				<fileset dir="${cyTScanner.tests.dir}" includes="**/*TestSwing.java" />
			</batchtest>

		</junit>
		<junitreport todir="${cyTScanner.tests.reports.dir}">
			<fileset dir="${cyTScanner.tests.reports.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${cyTScanner.tests.reports.dir}" />
		</junitreport>


		<fail message="JUnit Tests failed! Check ${cyTScanner.tests.reports.dir}/index.html for details." if="junit.test.failure" />

	</target>


	<!-- =================================================================== -->
	<!-- Runs all test cases.                                    -->
	<!-- =================================================================== -->
	<target name="testAll" depends="tests">
		<echo>
	            ***********************************************
	            Running all unit tests individually. 
	            ***********************************************
		</echo>
		<mkdir dir="${junit.report.dir}" />
		<junit printsummary="withOutAndErr" showoutput="yes" haltonfailure="no" maxmemory="1g">
			<classpath refid="cyTScanner.project.class.path" />
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${junit.report.dir}" filtertrace="no">
				<fileset dir="${cyTScanner.tests.dir}" includes="**/*Test.java" excludes="**/AllTests.java" />
			</batchtest>
		</junit>

		<junitreport todir="${junit.report.dir}">
			<fileset dir="${junit.report.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${junit.report.dir}" />
		</junitreport>
		<delete file="cyTScannerTests.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Creates the API documentation                                       -->
	<!-- =================================================================== -->
	<target name="docs" depends="init-cyTScanner">
		<mkdir dir="${cyTScanner.javadoc.dir}" />
		<javadoc packagenames="${cyTScanner.packages}" excludepackagenames="${cyTScanner.packages.excludes}" sourcepath="${cyTScanner.src.dir}" destdir="${cyTScanner.javadoc.dir}" classpathref="cyTScanner.project.class.path" author="true" version="true" use="true" splitindex="true" noindex="false" windowtitle="${cyTScanner.Name} API" doctitle="${cyTScanner.Name}" />
	</target>

</project>

<!-- End of file -->
