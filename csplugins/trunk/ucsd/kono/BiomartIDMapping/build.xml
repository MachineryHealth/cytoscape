<!-- =================================================================== -->
<!-- Biomart User Interface plugin (BioWebService.jar) build file     
			11/16/2006 Written by Keiichiro Ono (kono@ucsd.edu)       -->
<!-- =================================================================== -->

<project name="biomartUI" default="biomartUI" basedir=".">

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init-biomartUI">
		<tstamp />
		<property name="biomartUI.Name" value="Service Consumer Test Plugin" />
		<property name="biomartUI.name" value="biomartUI" />
		<property name="biomartUI.version" value="0.5" />
		<property name="biomartUI.year" value="200" />

		<echo message="Building ${biomartUI.name} version ${biomartUI.version}." />

		<!-- Inheritable properties -->
		<property name="debug" value="on" />
		<property name="optimize" value="off" />
		<property name="deprecation" value="on" />
		<property name="nowarn" value="true" />
		<property name="fork" value="false" />
		<property name="biomartUI.root.dir" value="." />

		<!-- You need to modify this line to point to Cytoscape directory.  -->
		<property name="cytoscape.dir" value="${biomartUI.root.dir}/../FRESH4" />

		<property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib" />
		<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins" />
		<property name="cytoscape.build.dir" value="${cytoscape.dir}/build/cytoscape-v2.5.0" />

		<!-- JUnit report directory -->
		<property name="junit.report.dir" value="${biomartUI.root.dir}/junit-reports" />

		<path id="project.class.path">
			<pathelement path="${java.class.path}/" />
		</path>

		<!-- Define the directories -->
		<property name="biomartUI.root.dir" value="./" />
		<property name="biomartUI.src.dir" value="${biomartUI.root.dir}/src" />
		<property name="biomartUI.lib.dir" value="${biomartUI.root.dir}/lib" />
		<property name="biomartUI.tests.dir" value="${biomartUI.root.dir}/tests" />
		<property name="biomartUI.classes.dir" value="${biomartUI.root.dir}/classes" />
		<property name="biomartUI.testclasses.dir" value="${biomartUI.root.dir}/testClasses" />
		<property name="biomartUI.javadoc.dir" value="${javadoc.dir}/biomartUI" />
		<property name="biomartUI.resources.dir" value="${biomartUI.root.dir}/resources" />
		<property name="biomartUI.manifest.dir" value="${biomartUI.root.dir}/manifest" />
		<property name="biomartUI.packages" value="biomartUI.*" />
		<!-- Subdirectory for test reports -->
		<property name="biomartUI.tests.reports.dir" value="${biomartUI.root.dir}/reports/tests" />

		<!-- Define the condition for compilation -->
		<property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar" />

		<condition property="cytoscape.present">
			<and>
				<available file="${cytoscape.jar}" />
			</and>
		</condition>

		<!-- Define excludes for biomartUI compile and javadoc -->
		<property name="biomartUI.excludes" value="**/notyet/*" />
		<property name="biomartUI.tests.excludes" value="**/notyet/*" />
		<property name="biomartUI.packages.excludes" value="**.test.*,**.notyet.*" />

		<path id="biomartUI.project.class.path">
			<pathelement location="${biomartUI.classes.dir}" />
			<pathelement path="${biomartUI.root.dir}/biomartUITests.jar/" />
			<fileset dir="${biomartUI.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${biomartUI.root.dir}/../BiomartClient">
							<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}/build-libs">
				<include name="*.jar" />
			</fileset>
		</path>


	</target>

	<!-- =================================================================== -->
	<!-- Clean up, get back to original state                                -->
	<!-- =================================================================== -->
	<target name="clean" depends="init-biomartUI">
		<delete dir="${biomartUI.classes.dir}" />
		<delete dir="${biomartUI.testclasses.dir}" />
		<delete dir="${biomartUI.tests.reports.dir}"/>
		<delete file="biomartUI.jar" />
		<delete file="${biomartUI.lib.dir}/biomartUI.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the biomartUI project                                           -->
	<!-- =================================================================== -->
	<target name="compile-biomartUI" depends="init-biomartUI">

		<echo message=" COMPILE biomartUI " />

		<mkdir dir="${biomartUI.classes.dir}" />
		<javac srcdir="${biomartUI.src.dir}" excludes="${biomartUI.excludes}" classpathref="biomartUI.project.class.path" destdir="${biomartUI.classes.dir}" debug="${debug}" nowarn="${nowarn}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the biomartUI.jar file                                           -->
	<!-- =================================================================== -->
	<target name="biomartUI" depends="compile-biomartUI">
		<!-- copy over images -->
		<copy todir="${biomartUI.classes.dir}/images">
			<fileset dir="${biomartUI.root.dir}/images" />
		</copy>
		<copy todir="${biomartUI.classes.dir}/resource">
					<fileset dir="${biomartUI.root.dir}/resource" />
		</copy>
		<copy todir="${biomartUI.classes.dir}/edu/ucsd/bioeng/idekerlab/biomartui/" 
			file="${biomartUI.manifest.dir}/plugin.props"/>

		<unjar dest="${biomartUI.classes.dir}">
			<fileset dir="${biomartUI.lib.dir}">
				<include name="*.jar" />

				<exclude name="biomartUI.jar" />
				<exclude name="biomartUITest.jar" />
				<exclude name="biomartClient.jar" />
				
			</fileset>
			
		</unjar>
		<jar destfile="biomartUI.jar" manifest="${biomartUI.manifest.dir}/biomartUI.manifest">
			<fileset dir="${biomartUI.classes.dir}" includes="**" />
			<fileset dir="${biomartUI.root.dir}/lib" includes="resources/**" />
		</jar>

	</target>

	<!-- =================================================================== -->
	<!-- release                                             -->
	<!-- =================================================================== -->
	<target name="release" depends="testAll">
		<copy todir="${biomartUI.lib.dir}" file="biomartUI.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the biomartUI tests                                             -->
	<!-- =================================================================== -->
	<target name="compile-tests" depends="biomartUI">
		<mkdir dir="${biomartUI.testclasses.dir}" />
		<javac srcdir="${biomartUI.tests.dir}" includes="**/*" classpathref="biomartUI.project.class.path" destdir="${biomartUI.testclasses.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the biomartUITests.jar file                                     -->
	<!-- =================================================================== -->
	<target name="tests" depends="compile-tests">
		<jar jarfile="biomartUITests.jar" basedir="${biomartUI.testclasses.dir}" includes="**/*" />
	</target>

	<!-- =================================================================== -->
	<!-- Build all jars                                                      -->
	<!-- =================================================================== -->
	<target name="all" depends="biomartUI" />

	<!-- =================================================================== -->
	<!-- Run the Plugin                                                      -->
	<!-- =================================================================== -->
	<target name="run" depends="biomartUI">
		<java classname="cytoscape.cytoscape" classpathref="biomartUI.project.class.path" fork="true" />
		<arg line="-p ${biomartUI.lib.dir}/biomartUI.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Runs the tests in biomartUITests.jar                                    -->
	<!-- =================================================================== -->
	<target name="runtests" depends="tests">
		<mkdir dir="${biomartUI.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" dir="${biomartUI.classes.dir}" maxmemory="1G">
			<formatter type="plain" usefile="true" />
			<classpath refid="biomartUI.project.class.path" />
			<!-- The junit task doesn't support 'if' so we test for JUnit here -->
			<batchtest fork="yes" todir="${biomartUI.tests.reports.dir}" if="junit.present">
				<fileset dir="${biomartUI.classes.dir}" includes="**/test/*" excludes="${biomartUI.tests.excludes}" />
			</batchtest>
		</junit>
	</target>

	<!-- ======================================================= -->
	<!-- Run all of the Swing Unit Tests                       -->
	<!-- ======================================================= -->
	<target name="test-swing" depends="biomartUI" >
		<mkdir dir="${biomartUI.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="1G" filtertrace="off" includeantruntime="true" showoutput="on">
			
			<classpath>
				<fileset dir="${biomartUI.root.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${biomartUI.root.dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}/build-libs">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${biomartUI.root.dir}/testClasses">
									<include name="**/*" />
				</fileset>
			</classpath>
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${biomartUI.tests.reports.dir}"  >
				<fileset dir="${biomartUI.tests.dir}" includes="**/*TestSwing.java" />
			</batchtest>

		</junit>
		<junitreport todir="${biomartUI.tests.reports.dir}">
			<fileset dir="${biomartUI.tests.reports.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${biomartUI.tests.reports.dir}" />
		</junitreport>


		<fail message="JUnit Tests failed! Check ${biomartUI.tests.reports.dir}/index.html for details." if="junit.test.failure" />

	</target>


	<!-- =================================================================== -->
	<!-- Runs all test cases.                                    -->
	<!-- =================================================================== -->
	<target name="testAll" depends="tests">
		<echo>
	            ***********************************************
	            Running all unit tests individually. 
	            ***********************************************
		</echo>
		<mkdir dir="${junit.report.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="512m">
			<classpath refid="biomartUI.project.class.path" />
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${junit.report.dir}" filtertrace="no">
				<fileset dir="${biomartUI.tests.dir}" includes="**/*Test.java" excludes="**/AllTests.java" />
			</batchtest>
		</junit>

		<junitreport todir="${junit.report.dir}">
			<fileset dir="${junit.report.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${junit.report.dir}" />
		</junitreport>
		<delete file="biomartUITests.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Creates the API documentation                                       -->
	<!-- =================================================================== -->
	<target name="docs" depends="init-biomartUI">
		<mkdir dir="${biomartUI.javadoc.dir}" />
		<javadoc packagenames="${biomartUI.packages}" excludepackagenames="${biomartUI.packages.excludes}" sourcepath="${biomartUI.src.dir}" destdir="${biomartUI.javadoc.dir}" classpathref="biomartUI.project.class.path" author="true" version="true" use="true" splitindex="true" noindex="false" windowtitle="${biomartUI.Name} API" doctitle="${biomartUI.Name}" />
	</target>

</project>

<!-- End of file -->
