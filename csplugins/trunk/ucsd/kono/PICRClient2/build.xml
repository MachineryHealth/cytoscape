<!-- =================================================================== -->
<!-- PICR Web Service Client plugin (picrClient.jar) build file     
			08/29/2007 Written by Keiichiro Ono (kono@ucsd.edu)       -->
<!-- =================================================================== -->

<project name="picrClient" default="picrClient" basedir=".">

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init-picrClient">
		<tstamp />
		<property name="picrClient.Name" value="NCBI Web Service Client Plugin" />
		<property name="picrClient.name" value="picrClient" />
		<property name="picrClient.version" value="0.5" />
		<property name="picrClient.year" value="200" />

		<echo message="Building ${picrClient.name} version ${picrClient.version}." />

		<!-- Inheritable properties -->
		<property name="debug" value="on" />
		<property name="optimize" value="off" />
		<property name="deprecation" value="on" />
		<property name="nowarn" value="true" />
		<property name="fork" value="false" />
		<property name="picrClient.root.dir" value="." />

		<!-- You need to modify this line to point to Cytoscape directory.  -->
		<property name="cytoscape.dir" value="${picrClient.root.dir}/../c26" />

		<property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib" />
		<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins" />
		<property name="cytoscape.build.dir" value="${cytoscape.dir}/build/cytoscape-v2.6.1" />

		<!-- JUnit report directory -->
		<property name="junit.report.dir" value="${picrClient.root.dir}/junit-reports" />

		<path id="project.class.path">
			<pathelement path="${java.class.path}/" />
		</path>

		<!-- Define the directories -->
		<property name="picrClient.root.dir" value="./" />
		<property name="picrClient.src.dir" value="${picrClient.root.dir}/src" />
		<property name="picrClient.lib.dir" value="${picrClient.root.dir}/lib" />
		<property name="picrClient.tests.dir" value="${picrClient.root.dir}/tests" />
		<property name="picrClient.classes.dir" value="${picrClient.root.dir}/classes" />
		<property name="picrClient.testclasses.dir" value="${picrClient.root.dir}/testClasses" />
		<property name="picrClient.javadoc.dir" value="${javadoc.dir}/picrClient" />
		<property name="picrClient.resources.dir" value="${picrClient.root.dir}/resources" />
		<property name="picrClient.manifest.dir" value="${picrClient.root.dir}/manifest" />
		<property name="picrClient.packages" value="picrClient.*" />
		<!-- Subdirectory for test reports -->
		<property name="picrClient.tests.reports.dir" value="${picrClient.root.dir}/reports/tests" />

		<!-- Define the condition for compilation -->
		<property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar" />

		<condition property="cytoscape.present">
			<and>
				<available file="${cytoscape.jar}" />
			</and>
		</condition>

		<!-- Define excludes for picrClient compile and javadoc -->
		<property name="picrClient.excludes" value="**/notyet/*" />
		<property name="picrClient.tests.excludes" value="**/notyet/*" />
		<property name="picrClient.packages.excludes" value="**.test.*,**.notyet.*" />

		<path id="picrClient.project.class.path">
			<pathelement location="${picrClient.classes.dir}" />
			<pathelement path="${picrClient.root.dir}/picrClientTests.jar/" />
			<fileset dir="${picrClient.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}/build-libs">
				<include name="*.jar" />
			</fileset>
		</path>


	</target>

	<!-- =================================================================== -->
	<!-- Clean up, get back to original state                                -->
	<!-- =================================================================== -->
	<target name="clean" depends="init-picrClient">
		<delete dir="${picrClient.classes.dir}" />
		<delete dir="${picrClient.testclasses.dir}" />
		<delete dir="${picrClient.tests.reports.dir}"/>
		<delete file="picrClient.jar" />
		<delete file="${picrClient.lib.dir}/picrClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the picrClient project                                           -->
	<!-- =================================================================== -->
	<target name="compile-picrClient" depends="init-picrClient">

		<echo message=" COMPILE picrClient " />

		<mkdir dir="${picrClient.classes.dir}" />
		<javac srcdir="${picrClient.src.dir}" excludes="${picrClient.excludes}" classpathref="picrClient.project.class.path" destdir="${picrClient.classes.dir}" debug="${debug}" nowarn="${nowarn}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the picrClient.jar file                                           -->
	<!-- =================================================================== -->
	<target name="picrClient" depends="compile-picrClient">
		<!-- copy over images -->
		<copy todir="${picrClient.classes.dir}/images">
			<fileset dir="${picrClient.root.dir}/images" />
		</copy>
		<copy todir="${picrClient.classes.dir}/edu/ucsd/bioeng/idekerlab/picrclient" 
			file="${picrClient.manifest.dir}/plugin.props"/>

		<unjar dest="${picrClient.classes.dir}">
			<fileset dir="${picrClient.lib.dir}">
				<include name="*.jar" />

				<exclude name="picrClient.jar" />
				<exclude name="picrClientTest.jar" />
			</fileset>
		</unjar>
		<jar destfile="picrClient.jar" manifest="${picrClient.manifest.dir}/picrClient.manifest">
			<fileset dir="${picrClient.classes.dir}" includes="**" />
			<fileset dir="${picrClient.root.dir}/lib" includes="resources/**" />
		</jar>

	</target>

	<!-- =================================================================== -->
	<!-- release                                             -->
	<!-- =================================================================== -->
	<target name="release" depends="testAll">
		<copy todir="${picrClient.lib.dir}" file="picrClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the picrClient tests                                             -->
	<!-- =================================================================== -->
	<target name="compile-tests" depends="picrClient">
		<mkdir dir="${picrClient.testclasses.dir}" />
		<javac srcdir="${picrClient.tests.dir}" includes="**/*" classpathref="picrClient.project.class.path" destdir="${picrClient.testclasses.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the picrClientTests.jar file                                     -->
	<!-- =================================================================== -->
	<target name="tests" depends="compile-tests">
		<jar jarfile="picrClientTests.jar" basedir="${picrClient.testclasses.dir}" includes="**/*" />
	</target>

	<!-- =================================================================== -->
	<!-- Build all jars                                                      -->
	<!-- =================================================================== -->
	<target name="all" depends="picrClient" />

	<!-- =================================================================== -->
	<!-- Run the Plugin                                                      -->
	<!-- =================================================================== -->
	<target name="run" depends="picrClient">
		<java classname="cytoscape.cytoscape" classpathref="picrClient.project.class.path" fork="true" />
		<arg line="-p ${picrClient.lib.dir}/picrClient.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Runs the tests in picrClientTests.jar                                    -->
	<!-- =================================================================== -->
	<target name="runtests" depends="tests">
		<mkdir dir="${picrClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" dir="${picrClient.classes.dir}" maxmemory="1G">
			<formatter type="plain" usefile="true" />
			<classpath refid="picrClient.project.class.path" />
			<!-- The junit task doesn't support 'if' so we test for JUnit here -->
			<batchtest fork="yes" todir="${picrClient.tests.reports.dir}" if="junit.present">
				<fileset dir="${picrClient.classes.dir}" includes="**/test/*" excludes="${picrClient.tests.excludes}" />
			</batchtest>
		</junit>
	</target>

	<!-- ======================================================= -->
	<!-- Run all of the Swing Unit Tests                       -->
	<!-- ======================================================= -->
	<target name="test-swing" depends="picrClient" >
		<mkdir dir="${picrClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="1G" filtertrace="off" includeantruntime="true" showoutput="on">
			
			<classpath>
				<fileset dir="${picrClient.root.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${picrClient.root.dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}/build-libs">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${picrClient.root.dir}/testClasses">
									<include name="**/*" />
				</fileset>
			</classpath>
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${picrClient.tests.reports.dir}"  >
				<fileset dir="${picrClient.tests.dir}" includes="**/*TestSwing.java" />
			</batchtest>

		</junit>
		<junitreport todir="${picrClient.tests.reports.dir}">
			<fileset dir="${picrClient.tests.reports.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${picrClient.tests.reports.dir}" />
		</junitreport>


		<fail message="JUnit Tests failed! Check ${picrClient.tests.reports.dir}/index.html for details." if="junit.test.failure" />

	</target>


	<!-- =================================================================== -->
	<!-- Runs all test cases.                                    -->
	<!-- =================================================================== -->
	<target name="testAll" depends="tests">
		<echo>
	            ***********************************************
	            Running all unit tests individually. 
	            ***********************************************
		</echo>
		<mkdir dir="${junit.report.dir}" />
		<junit printsummary="withOutAndErr" showoutput="yes" haltonfailure="no" maxmemory="512m">
			<classpath refid="picrClient.project.class.path" />
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${junit.report.dir}" filtertrace="no">
				<fileset dir="${picrClient.tests.dir}" includes="**/*Test.java" excludes="**/AllTests.java" />
			</batchtest>
		</junit>

		<junitreport todir="${junit.report.dir}">
			<fileset dir="${junit.report.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${junit.report.dir}" />
		</junitreport>
		<delete file="picrClientTests.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Creates the API documentation                                       -->
	<!-- =================================================================== -->
	<target name="docs" depends="init-picrClient">
		<mkdir dir="${picrClient.javadoc.dir}" />
		<javadoc packagenames="${picrClient.packages}" excludepackagenames="${picrClient.packages.excludes}" sourcepath="${picrClient.src.dir}" destdir="${picrClient.javadoc.dir}" classpathref="picrClient.project.class.path" author="true" version="true" use="true" splitindex="true" noindex="false" windowtitle="${picrClient.Name} API" doctitle="${picrClient.Name}" />
	</target>

</project>

<!-- End of file -->
