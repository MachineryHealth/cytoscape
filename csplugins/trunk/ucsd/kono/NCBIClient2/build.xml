<!-- =================================================================== -->
<!-- NCBI Web Service Client plugin (NCBIClient.jar) build file     
			08/29/2007 Written by Keiichiro Ono (kono@ucsd.edu)       -->
<!-- =================================================================== -->

<project name="ncbiClient" default="ncbiClient" basedir="." xmlns:cxf="antlib:org.apache.cxf.ant.extensions">

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init-ncbiClient">
		<tstamp />
		<property name="ncbiClient.Name" value="NCBI Web Service Client Plugin" />
		<property name="ncbiClient.name" value="ncbiClient" />
		<property name="ncbiClient.version" value="0.5" />
		<property name="ncbiClient.year" value="200" />

		<echo message="Building ${ncbiClient.name} version ${ncbiClient.version}." />

		<!-- Inheritable properties -->
		<property name="debug" value="on" />
		<property name="optimize" value="off" />
		<property name="deprecation" value="on" />
		<property name="nowarn" value="true" />
		<property name="fork" value="false" />
		<property name="ncbiClient.root.dir" value="." />

		<!-- You need to modify this line to point to Cytoscape directory.  -->
		<property name="cytoscape.dir" value="${ncbiClient.root.dir}/../cytoscape" />

		<property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib" />
		<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins" />
		<property name="cytoscape.build.dir" value="${cytoscape.dir}/build/cytoscape-v2.6.3" />

		<!-- JUnit report directory -->
		<property name="junit.report.dir" value="${ncbiClient.root.dir}/junit-reports" />

		<path id="project.class.path">
			<pathelement path="${java.class.path}/" />
		</path>

		<!-- Define the directories -->
		<property name="ncbiClient.root.dir" value="./" />
		<property name="ncbiClient.src.dir" value="${ncbiClient.root.dir}/src" />
		<property name="ncbiClient.lib.dir" value="${ncbiClient.root.dir}/lib" />
		<property name="ncbiClient.tests.dir" value="${ncbiClient.root.dir}/tests" />
		<property name="ncbiClient.classes.dir" value="${ncbiClient.root.dir}/classes" />
		<property name="ncbiClient.testclasses.dir" value="${ncbiClient.root.dir}/testClasses" />
		<property name="ncbiClient.javadoc.dir" value="${javadoc.dir}/ncbiClient" />
		<property name="ncbiClient.resources.dir" value="${ncbiClient.root.dir}/resources" />
		<property name="ncbiClient.manifest.dir" value="${ncbiClient.root.dir}/manifest" />
		<property name="ncbiClient.packages" value="ncbiClient.*" />
		<!-- Subdirectory for test reports -->
		<property name="ncbiClient.tests.reports.dir" value="${ncbiClient.root.dir}/reports/tests" />

		<!-- Define the condition for compilation -->
		<property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar" />

		<condition property="cytoscape.present">
			<and>
				<available file="${cytoscape.jar}" />
			</and>
		</condition>

		<!-- Define excludes for ncbiClient compile and javadoc -->
		<property name="ncbiClient.excludes" value="**/notyet/*" />
		<property name="ncbiClient.tests.excludes" value="**/notyet/*" />
		<property name="ncbiClient.packages.excludes" value="**.test.*,**.notyet.*" />

		<path id="ncbiClient.project.class.path">
			<pathelement location="${ncbiClient.classes.dir}" />
			<pathelement path="${ncbiClient.root.dir}/ncbiClientTests.jar/" />
			<fileset dir="${ncbiClient.lib.dir}">
				<include name="*.jar" />
			</fileset>
			
			<fileset dir="${cytoscape.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}/build-libs">
				<include name="*.jar" />
			</fileset>
		</path>


	</target>

	<!-- =================================================================== -->
	<!-- Clean up, get back to original state                                -->
	<!-- =================================================================== -->
	<target name="clean" depends="init-ncbiClient">
		<delete dir="${ncbiClient.classes.dir}" />
		<delete dir="${ncbiClient.testclasses.dir}" />
		<delete dir="${ncbiClient.tests.reports.dir}"/>
		<delete file="ncbiClient.jar" />
		<delete file="${ncbiClient.lib.dir}/ncbiClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the ncbiClient project                                           -->
	<!-- =================================================================== -->
	<target name="compile-ncbiClient" depends="init-ncbiClient">

		<echo message=" COMPILE ncbiClient " />

		<mkdir dir="${ncbiClient.classes.dir}" />
		<javac srcdir="${ncbiClient.src.dir}" excludes="${ncbiClient.excludes}" classpathref="ncbiClient.project.class.path" destdir="${ncbiClient.classes.dir}" debug="${debug}" nowarn="${nowarn}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the ncbiClient.jar file                                           -->
	<!-- =================================================================== -->
	<target name="ncbiClient" depends="compile-ncbiClient">
		<!-- copy over images -->
		<copy todir="${ncbiClient.classes.dir}/images">
			<fileset dir="${ncbiClient.root.dir}/images" />
		</copy>
		
		<copy todir="${ncbiClient.classes.dir}/edu/ucsd/bioeng/idekerlab/ncbiclient" 
					file="${ncbiClient.manifest.dir}/plugin.props"/>

		<unjar dest="${ncbiClient.classes.dir}">
			<fileset dir="${ncbiClient.lib.dir}">
				<include name="*.jar" />

				<exclude name="ncbiClient.jar" />
				<exclude name="ncbiClientTest.jar" />
			</fileset>
			
		</unjar>
		<jar destfile="ncbiClient.jar" manifest="${ncbiClient.manifest.dir}/ncbiClient.manifest">
			<fileset dir="${ncbiClient.classes.dir}" includes="**" />
			<fileset dir="${ncbiClient.root.dir}/lib" includes="resources/**" />
		</jar>

	</target>

	<!-- =================================================================== -->
	<!-- release                                             -->
	<!-- =================================================================== -->
	<target name="release" depends="testAll">
		<copy todir="${ncbiClient.lib.dir}" file="ncbiClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the ncbiClient tests                                             -->
	<!-- =================================================================== -->
	<target name="compile-tests" depends="ncbiClient">
		<mkdir dir="${ncbiClient.testclasses.dir}" />
		<javac srcdir="${ncbiClient.tests.dir}" includes="**/*" classpathref="ncbiClient.project.class.path" destdir="${ncbiClient.testclasses.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the ncbiClientTests.jar file                                     -->
	<!-- =================================================================== -->
	<target name="tests" depends="compile-tests">
		<jar jarfile="ncbiClientTests.jar" basedir="${ncbiClient.testclasses.dir}" includes="**/*" />
	</target>

	<!-- =================================================================== -->
	<!-- Build all jars                                                      -->
	<!-- =================================================================== -->
	<target name="all" depends="ncbiClient" />

	<!-- =================================================================== -->
	<!-- Run the Plugin                                                      -->
	<!-- =================================================================== -->
	<target name="run" depends="ncbiClient">
		<java classname="cytoscape.cytoscape" classpathref="ncbiClient.project.class.path" fork="true" />
		<arg line="-p ${ncbiClient.lib.dir}/ncbiClient.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Runs the tests in ncbiClientTests.jar                                    -->
	<!-- =================================================================== -->
	<target name="runtests" depends="tests">
		<mkdir dir="${ncbiClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" dir="${ncbiClient.classes.dir}" maxmemory="1G">
			<formatter type="plain" usefile="true" />
			<classpath refid="ncbiClient.project.class.path" />
			<!-- The junit task doesn't support 'if' so we test for JUnit here -->
			<batchtest fork="yes" todir="${ncbiClient.tests.reports.dir}" if="junit.present">
				<fileset dir="${ncbiClient.classes.dir}" includes="**/test/*" excludes="${ncbiClient.tests.excludes}" />
			</batchtest>
		</junit>
	</target>

	<!-- ======================================================= -->
	<!-- Run all of the Swing Unit Tests                       -->
	<!-- ======================================================= -->
	<target name="test-swing" depends="ncbiClient" >
		<mkdir dir="${ncbiClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="1G" filtertrace="off" includeantruntime="true" showoutput="on">
			
			<classpath>
				<fileset dir="${ncbiClient.root.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${ncbiClient.root.dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}/build-libs">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${ncbiClient.root.dir}/testClasses">
									<include name="**/*" />
				</fileset>
			</classpath>
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${ncbiClient.tests.reports.dir}"  >
				<fileset dir="${ncbiClient.tests.dir}" includes="**/*TestSwing.java" />
			</batchtest>

		</junit>
		<junitreport todir="${ncbiClient.tests.reports.dir}">
			<fileset dir="${ncbiClient.tests.reports.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${ncbiClient.tests.reports.dir}" />
		</junitreport>


		<fail message="JUnit Tests failed! Check ${ncbiClient.tests.reports.dir}/index.html for details." if="junit.test.failure" />

	</target>


	<!-- =================================================================== -->
	<!-- Runs all test cases.                                    -->
	<!-- =================================================================== -->
	<target name="testAll" depends="tests">
		<echo>
	            ***********************************************
	            Running all unit tests individually. 
	            ***********************************************
		</echo>
		<mkdir dir="${junit.report.dir}" />
		<junit printsummary="withOutAndErr" showoutput="yes" haltonfailure="no" maxmemory="1g">
			<classpath refid="ncbiClient.project.class.path" />
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${junit.report.dir}" filtertrace="no">
				<fileset dir="${ncbiClient.tests.dir}" includes="**/*Test.java" excludes="**/AllTests.java" />
			</batchtest>
		</junit>

		<junitreport todir="${junit.report.dir}">
			<fileset dir="${junit.report.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${junit.report.dir}" />
		</junitreport>
		<delete file="ncbiClientTests.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Creates the API documentation                                       -->
	<!-- =================================================================== -->
	<target name="docs" depends="init-ncbiClient">
		<mkdir dir="${ncbiClient.javadoc.dir}" />
		<javadoc packagenames="${ncbiClient.packages}" excludepackagenames="${ncbiClient.packages.excludes}" sourcepath="${ncbiClient.src.dir}" destdir="${ncbiClient.javadoc.dir}" classpathref="ncbiClient.project.class.path" author="true" version="true" use="true" splitindex="true" noindex="false" windowtitle="${ncbiClient.Name} API" doctitle="${ncbiClient.Name}" />
	</target>

</project>

<!-- End of file -->
