<!-- =================================================================== -->

<project name="biomartClient" default="biomartClient" basedir=".">

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init-biomartClient">
		<tstamp />
		<property name="biomartClient.Name" value="Biomart Client Plugin" />
		<property name="biomartClient.name" value="biomartClient" />
		<property name="biomartClient.version" value="0.5" />
		<property name="biomartClient.year" value="200" />

		<echo message="Building ${biomartClient.name} version ${biomartClient.version}." />

		<!-- Inheritable properties -->
		<property name="debug" value="on" />
		<property name="optimize" value="off" />
		<property name="deprecation" value="on" />
		<property name="nowarn" value="true" />
		<property name="fork" value="false" />
		<property name="biomartClient.root.dir" value="." />

		<!-- You need to modify this line to point to Cytoscape directory.  -->
		<property name="cytoscape.dir" value="${biomartClient.root.dir}/../FRESH4" />

		<property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib" />
		<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins" />
		<property name="cytoscape.build.dir" value="${cytoscape.dir}/build/cytoscape-v2.5.0" />

		<!-- JUnit report directory -->
		<property name="junit.report.dir" value="${biomartClient.root.dir}/junit-reports" />

		<path id="project.class.path">
			<pathelement path="${java.class.path}/" />
		</path>

		<!-- Define the directories -->
		<property name="biomartClient.root.dir" value="./" />
		<property name="biomartClient.src.dir" value="${biomartClient.root.dir}/src" />
		<property name="biomartClient.lib.dir" value="${biomartClient.root.dir}/lib" />
		<property name="biomartClient.tests.dir" value="${biomartClient.root.dir}/tests" />
		<property name="biomartClient.classes.dir" value="${biomartClient.root.dir}/classes" />
		<property name="biomartClient.testclasses.dir" value="${biomartClient.root.dir}/testClasses" />
		<property name="biomartClient.javadoc.dir" value="${javadoc.dir}/biomartClient" />
		<property name="biomartClient.resources.dir" value="${biomartClient.root.dir}/resources" />
		<property name="biomartClient.manifest.dir" value="${biomartClient.root.dir}/manifest" />
		<property name="biomartClient.packages" value="biomartClient.*" />
		<!-- Subdirectory for test reports -->
		<property name="biomartClient.tests.reports.dir" value="${biomartClient.root.dir}/reports/tests" />

		<!-- Define the condition for compilation -->
		<property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar" />

		<condition property="cytoscape.present">
			<and>
				<available file="${cytoscape.jar}" />
			</and>
		</condition>

		<!-- Define excludes for biomartClient compile and javadoc -->
		<property name="biomartClient.excludes" value="**/notyet/*" />
		<property name="biomartClient.tests.excludes" value="**/notyet/*" />
		<property name="biomartClient.packages.excludes" value="**.test.*,**.notyet.*" />

		<path id="biomartClient.project.class.path">
			<pathelement location="${biomartClient.classes.dir}" />
			<pathelement path="${biomartClient.root.dir}/biomartClientTests.jar/" />
			<fileset dir="${biomartClient.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}/build-libs">
				<include name="*.jar" />
			</fileset>
		</path>


	</target>

	<!-- =================================================================== -->
	<!-- Clean up, get back to original state                                -->
	<!-- =================================================================== -->
	<target name="clean" depends="init-biomartClient">
		<delete dir="${biomartClient.classes.dir}" />
		<delete dir="${biomartClient.testclasses.dir}" />
		<delete dir="${biomartClient.tests.reports.dir}"/>
		<delete file="biomartClient.jar" />
		<delete file="${biomartClient.lib.dir}/biomartClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the biomartClient project                                           -->
	<!-- =================================================================== -->
	<target name="compile-biomartClient" depends="init-biomartClient">

		<echo message=" COMPILE biomartClient " />

		<mkdir dir="${biomartClient.classes.dir}" />
		<javac srcdir="${biomartClient.src.dir}" excludes="${biomartClient.excludes}" classpathref="biomartClient.project.class.path" destdir="${biomartClient.classes.dir}" debug="${debug}" nowarn="${nowarn}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the biomartClient.jar file                                           -->
	<!-- =================================================================== -->
	<target name="biomartClient" depends="compile-biomartClient">
		<!-- copy over images -->
		<copy todir="${biomartClient.classes.dir}/images">
			<fileset dir="${biomartClient.root.dir}/images" />
		</copy>
		<copy todir="${biomartClient.classes.dir}/edu/ucsd/bioeng/coreplugin/biomartClient" 
			file="${biomartClient.manifest.dir}/plugin.props"/>

		<unjar dest="${biomartClient.classes.dir}">
			<fileset dir="${biomartClient.lib.dir}">
				<include name="*.jar" />

				<exclude name="biomartClient.jar" />
				<exclude name="biomartClientTest.jar" />
			</fileset>
		</unjar>
		<jar destfile="biomartClient.jar" manifest="${biomartClient.manifest.dir}/biomartClient.manifest">
			<fileset dir="${biomartClient.classes.dir}" includes="**" />
			<fileset dir="${biomartClient.root.dir}/lib" includes="resources/**" />
		</jar>

	</target>

	<!-- =================================================================== -->
	<!-- release                                             -->
	<!-- =================================================================== -->
	<target name="release" depends="testAll">
		<copy todir="${biomartClient.lib.dir}" file="biomartClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the biomartClient tests                                             -->
	<!-- =================================================================== -->
	<target name="compile-tests" depends="biomartClient">
		<mkdir dir="${biomartClient.testclasses.dir}" />
		<javac srcdir="${biomartClient.tests.dir}" includes="**/*" classpathref="biomartClient.project.class.path" destdir="${biomartClient.testclasses.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the biomartClientTests.jar file                                     -->
	<!-- =================================================================== -->
	<target name="tests" depends="compile-tests">
		<jar jarfile="biomartClientTests.jar" basedir="${biomartClient.testclasses.dir}" includes="**/*" />
	</target>

	<!-- =================================================================== -->
	<!-- Build all jars                                                      -->
	<!-- =================================================================== -->
	<target name="all" depends="biomartClient" />

	<!-- =================================================================== -->
	<!-- Run the Plugin                                                      -->
	<!-- =================================================================== -->
	<target name="run" depends="biomartClient">
		<java classname="cytoscape.cytoscape" classpathref="biomartClient.project.class.path" fork="true" />
		<arg line="-p ${biomartClient.lib.dir}/biomartClient.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Runs the tests in biomartClientTests.jar                                    -->
	<!-- =================================================================== -->
	<target name="runtests" depends="tests">
		<mkdir dir="${biomartClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" dir="${biomartClient.classes.dir}" maxmemory="1G">
			<formatter type="plain" usefile="true" />
			<classpath refid="biomartClient.project.class.path" />
			<!-- The junit task doesn't support 'if' so we test for JUnit here -->
			<batchtest fork="yes" todir="${biomartClient.tests.reports.dir}" if="junit.present">
				<fileset dir="${biomartClient.classes.dir}" includes="**/test/*" excludes="${biomartClient.tests.excludes}" />
			</batchtest>
		</junit>
	</target>

	<!-- ======================================================= -->
	<!-- Run all of the Swing Unit Tests                       -->
	<!-- ======================================================= -->
	<target name="test-swing" depends="biomartClient" >
		<mkdir dir="${biomartClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="1G" filtertrace="off" includeantruntime="true" showoutput="on">
			
			<classpath>
				<fileset dir="${biomartClient.root.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${biomartClient.root.dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}/build-libs">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${biomartClient.root.dir}/testClasses">
									<include name="**/*" />
				</fileset>
			</classpath>
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${biomartClient.tests.reports.dir}"  >
				<fileset dir="${biomartClient.tests.dir}" includes="**/*TestSwing.java" />
			</batchtest>

		</junit>
		<junitreport todir="${biomartClient.tests.reports.dir}">
			<fileset dir="${biomartClient.tests.reports.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${biomartClient.tests.reports.dir}" />
		</junitreport>


		<fail message="JUnit Tests failed! Check ${biomartClient.tests.reports.dir}/index.html for details." if="junit.test.failure" />

	</target>


	<!-- =================================================================== -->
	<!-- Runs all test cases.                                    -->
	<!-- =================================================================== -->
	<target name="testAll" depends="tests">
		<echo>
	            ***********************************************
	            Running all unit tests individually. 
	            ***********************************************
		</echo>
		<mkdir dir="${junit.report.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="512m">
			<classpath refid="biomartClient.project.class.path" />
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${junit.report.dir}" filtertrace="no">
				<fileset dir="${biomartClient.tests.dir}" includes="**/*Test.java" excludes="**/AllTests.java" />
			</batchtest>
		</junit>

		<junitreport todir="${junit.report.dir}">
			<fileset dir="${junit.report.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${junit.report.dir}" />
		</junitreport>
		<delete file="biomartClientTests.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Creates the API documentation                                       -->
	<!-- =================================================================== -->
	<target name="docs" depends="init-biomartClient">
		<mkdir dir="${biomartClient.javadoc.dir}" />
		<javadoc packagenames="${biomartClient.packages}" excludepackagenames="${biomartClient.packages.excludes}" sourcepath="${biomartClient.src.dir}" destdir="${biomartClient.javadoc.dir}" classpathref="biomartClient.project.class.path" author="true" version="true" use="true" splitindex="true" noindex="false" windowtitle="${biomartClient.Name} API" doctitle="${biomartClient.Name}" />
	</target>

</project>

<!-- End of file -->
