<!-- =================================================================== -->
<!-- NCBI Web Service Client plugin (NCBIClient.jar) build file     
			08/29/2007 Written by Keiichiro Ono (kono@ucsd.edu)       -->
<!-- =================================================================== -->

<project name="intactClient" default="intactClient" basedir=".">

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init-intactClient">
		<tstamp />
		<property name="intactClient.Name" value="Intact Web Service Client Plugin" />
		<property name="intactClient.name" value="intactClient" />
		<property name="intactClient.version" value="0.5" />
		<property name="intactClient.year" value="200" />

		<echo message="Building ${intactClient.name} version ${intactClient.version}." />

		<!-- Inheritable properties -->
		<property name="debug" value="on" />
		<property name="optimize" value="off" />
		<property name="deprecation" value="on" />
		<property name="nowarn" value="true" />
		<property name="fork" value="false" />
		<property name="intactClient.root.dir" value="." />

		<!-- You need to modify this line to point to Cytoscape directory.  -->
		<property name="cytoscape.dir" value="${intactClient.root.dir}/../FRESH4" />

		<property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib" />
		<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins" />
		<property name="cytoscape.build.dir" value="${cytoscape.dir}/build/cytoscape-v2.5.0" />

		<!-- JUnit report directory -->
		<property name="junit.report.dir" value="${intactClient.root.dir}/junit-reports" />

		<path id="project.class.path">
			<pathelement path="${java.class.path}/" />
		</path>

		<!-- Define the directories -->
		<property name="intactClient.root.dir" value="./" />
		<property name="intactClient.src.dir" value="${intactClient.root.dir}/src" />
		<property name="intactClient.lib.dir" value="${intactClient.root.dir}/lib" />
		<property name="intactClient.tests.dir" value="${intactClient.root.dir}/tests" />
		<property name="intactClient.classes.dir" value="${intactClient.root.dir}/classes" />
		<property name="intactClient.testclasses.dir" value="${intactClient.root.dir}/testClasses" />
		<property name="intactClient.javadoc.dir" value="${javadoc.dir}/intactClient" />
		<property name="intactClient.resources.dir" value="${intactClient.root.dir}/resources" />
		<property name="intactClient.manifest.dir" value="${intactClient.root.dir}/manifest" />
		<property name="intactClient.packages" value="intactClient.*" />
		<!-- Subdirectory for test reports -->
		<property name="intactClient.tests.reports.dir" value="${intactClient.root.dir}/reports/tests" />

		<!-- Define the condition for compilation -->
		<property name="cytoscape.jar" value="${cytoscape.dir}/cytoscape.jar" />

		<condition property="cytoscape.present">
			<and>
				<available file="${cytoscape.jar}" />
			</and>
		</condition>

		<!-- Define excludes for intactClient compile and javadoc -->
		<property name="intactClient.excludes" value="**/notyet/*" />
		<property name="intactClient.tests.excludes" value="**/notyet/*" />
		<property name="intactClient.packages.excludes" value="**.test.*,**.notyet.*" />

		<path id="intactClient.project.class.path">
			<pathelement location="${intactClient.classes.dir}" />
			<pathelement path="${intactClient.root.dir}/intactClientTests.jar/" />
			<fileset dir="${intactClient.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${cytoscape.lib.dir}/build-libs">
				<include name="*.jar" />
			</fileset>
		</path>


	</target>

	<!-- =================================================================== -->
	<!-- Clean up, get back to original state                                -->
	<!-- =================================================================== -->
	<target name="clean" depends="init-intactClient">
		<delete dir="${intactClient.classes.dir}" />
		<delete dir="${intactClient.testclasses.dir}" />
		<delete dir="${intactClient.tests.reports.dir}" />
		<delete file="intactClient.jar" />
		<delete file="${intactClient.lib.dir}/intactClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the intactClient project                                           -->
	<!-- =================================================================== -->
	<target name="compile-intactClient" depends="init-intactClient">

		<echo message=" COMPILE intactClient " />

		<mkdir dir="${intactClient.classes.dir}" />
		<javac srcdir="${intactClient.src.dir}" excludes="${intactClient.excludes}" classpathref="intactClient.project.class.path" destdir="${intactClient.classes.dir}" debug="${debug}" nowarn="${nowarn}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the intactClient.jar file                                           -->
	<!-- =================================================================== -->
	<target name="intactClient" depends="compile-intactClient">
		<!-- copy over images -->
		<copy todir="${intactClient.classes.dir}/images">
			<fileset dir="${intactClient.root.dir}/images" />
		</copy>

		<copy todir="${intactClient.classes.dir}/edu/ucsd/bioeng/coreplugin/intactClient" file="${intactClient.manifest.dir}/plugin.props" />

		<unjar dest="${intactClient.classes.dir}">
			<fileset dir="${intactClient.lib.dir}">
				<include name="*.jar" />

				<exclude name="intactClient.jar" />
				<exclude name="intactClientTest.jar" />
			</fileset>
		</unjar>

		<jar destfile="intactClient.jar" manifest="${intactClient.manifest.dir}/intactClient.manifest">
			<fileset dir="${intactClient.classes.dir}" includes="**" />
			<fileset dir="${intactClient.root.dir}/lib" includes="resources/**" />
		</jar>

	</target>

	<!-- =================================================================== -->
	<!-- release                                             -->
	<!-- =================================================================== -->
	<target name="release" depends="testAll">
		<copy todir="${intactClient.lib.dir}" file="intactClient.jar" />
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the intactClient tests                                             -->
	<!-- =================================================================== -->
	<target name="compile-tests" depends="intactClient">
		<mkdir dir="${intactClient.testclasses.dir}" />
		<javac srcdir="${intactClient.tests.dir}" includes="**/*" classpathref="intactClient.project.class.path" destdir="${intactClient.testclasses.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" fork="${fork}" />
	</target>

	<!-- =================================================================== -->
	<!-- Creates the intactClientTests.jar file                                     -->
	<!-- =================================================================== -->
	<target name="tests" depends="compile-tests">
		<jar jarfile="intactClientTests.jar" basedir="${intactClient.testclasses.dir}" includes="**/*" />
	</target>

	<!-- =================================================================== -->
	<!-- Build all jars                                                      -->
	<!-- =================================================================== -->
	<target name="all" depends="intactClient" />

	<!-- =================================================================== -->
	<!-- Run the Plugin                                                      -->
	<!-- =================================================================== -->
	<target name="run" depends="intactClient">
		<java classname="cytoscape.cytoscape" classpathref="intactClient.project.class.path" fork="true" />
		<arg line="-p ${intactClient.lib.dir}/intactClient.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Runs the tests in intactClientTests.jar                                    -->
	<!-- =================================================================== -->
	<target name="runtests" depends="tests">
		<mkdir dir="${intactClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" dir="${intactClient.classes.dir}" maxmemory="1G">
			<formatter type="plain" usefile="true" />
			<classpath refid="intactClient.project.class.path" />
			<!-- The junit task doesn't support 'if' so we test for JUnit here -->
			<batchtest fork="yes" todir="${intactClient.tests.reports.dir}" if="junit.present">
				<fileset dir="${intactClient.classes.dir}" includes="**/test/*" excludes="${intactClient.tests.excludes}" />
			</batchtest>
		</junit>
	</target>

	<!-- ======================================================= -->
	<!-- Run all of the Swing Unit Tests                       -->
	<!-- ======================================================= -->
	<target name="test-swing" depends="intactClient">
		<mkdir dir="${intactClient.tests.reports.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="1G" filtertrace="off" includeantruntime="true" showoutput="on">

			<classpath>
				<fileset dir="${intactClient.root.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${intactClient.root.dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.lib.dir}/build-libs">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${cytoscape.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${intactClient.root.dir}/testClasses">
					<include name="**/*" />
				</fileset>
			</classpath>
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${intactClient.tests.reports.dir}">
				<fileset dir="${intactClient.tests.dir}" includes="**/*TestSwing.java" />
			</batchtest>

		</junit>
		<junitreport todir="${intactClient.tests.reports.dir}">
			<fileset dir="${intactClient.tests.reports.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${intactClient.tests.reports.dir}" />
		</junitreport>


		<fail message="JUnit Tests failed! Check ${intactClient.tests.reports.dir}/index.html for details." if="junit.test.failure" />

	</target>


	<!-- =================================================================== -->
	<!-- Runs all test cases.                                    -->
	<!-- =================================================================== -->
	<target name="testAll" depends="tests">
		<echo>
	            ***********************************************
	            Running all unit tests individually. 
	            ***********************************************
		</echo>
		<mkdir dir="${junit.report.dir}" />
		<junit printsummary="yes" haltonfailure="no" maxmemory="512m">
			<classpath refid="intactClient.project.class.path" />
			<formatter type="plain" usefile="true" />
			<formatter type="xml" usefile="true" />
			<batchtest fork="yes" todir="${junit.report.dir}" filtertrace="no">
				<fileset dir="${intactClient.tests.dir}" includes="**/*Test.java" excludes="**/AllTests.java" />
			</batchtest>
		</junit>

		<junitreport todir="${junit.report.dir}">
			<fileset dir="${junit.report.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${junit.report.dir}" />
		</junitreport>
		<delete file="intactClientTests.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- Creates the API documentation                                       -->
	<!-- =================================================================== -->
	<target name="docs" depends="init-intactClient">
		<mkdir dir="${intactClient.javadoc.dir}" />
		<javadoc packagenames="${intactClient.packages}" excludepackagenames="${intactClient.packages.excludes}" sourcepath="${intactClient.src.dir}" destdir="${intactClient.javadoc.dir}" classpathref="intactClient.project.class.path" author="true" version="true" use="true" splitindex="true" noindex="false" windowtitle="${intactClient.Name} API" doctitle="${intactClient.Name}" />
	</target>

</project>

<!-- End of file -->
