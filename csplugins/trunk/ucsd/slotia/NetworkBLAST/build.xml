<project name="NetworkBLAST" default="NetworkBLAST" basedir=".">

  <!-- =================================================================== -->
  <!-- Initialization target                                               -->
  <!-- =================================================================== -->
  <target name="init-NetworkBLAST">
    <tstamp/>
    <property name="NetworkBLAST.Name" value="NetworkBLAST"/>
    <property name="NetworkBLAST.name" value="NetworkBLAST"/>
    <property name="NetworkBLAST.version" value="0.1"/>
    <property name="NetworkBLAST.year" value="2006"/>

    <echo message="Building ${NetworkBLAST.name} version ${NetworkBLAST.version}."/>

    <!-- Inheritable properties -->
    <property name="debug" value="on"/>
    <property name="optimize" value="off"/>
    <property name="deprecation" value="on"/>
    <property name="nowarn" value="true"/>
    <property name="fork" value="false"/>
    <property name="NetworkBLAST.root.dir" value="."/>
    <property name="cytoscape.dir" value="../../../../cytoscape"/>
    <property name="cytoscape.lib.dir" value="${cytoscape.dir}/lib"/>
    <property name="cytoscape.plugin.dir" value="${cytoscape.dir}/build/cytoscape-v2.3/plugins"/>
    <path id="project.class.path">
      <pathelement path="${java.class.path}/"/>
    </path>

    <!-- Define the directories -->
    <property name="NetworkBLAST.root.dir" value="./"/>
    <property name="NetworkBLAST.src.dir" value="${NetworkBLAST.root.dir}/src"/>
    <property name="NetworkBLAST.classes.dir" value="${NetworkBLAST.root.dir}/classes"/>
    <property name="NetworkBLAST.manifest.dir" value="${NetworkBLAST.root.dir}/manifest"/>
    <property name="NetworkBLAST.resources.dir" value="${NetworkBLAST.root.dir}/resources"/>
    <property name="NetworkBLAST.packages" value="NetworkBLAST.*"/>

    <!-- Define excludes for NetworkBLAST compile and javadoc -->
    <property name="NetworkBLAST.excludes" value="**/notyet/*"/>
    <property name="NetworkBLAST.packages.excludes" value="**.test.*,**.notyet.*"/>

    <path id="NetworkBLAST.project.class.path">
      <pathelement location="${NetworkBLAST.classes.dir}"/>
      <pathelement location="/cellar/users/slotia/nct/nct.jar"/>
      <pathelement location="${cytoscape.dir}/cytoscape.jar"/>
      <pathelement location="${cytoscape.lib.dir}/giny.jar"/>
    </path>

   

  </target>

  <!-- =================================================================== -->
  <!-- Compiles the NetworkBLAST project                                           -->
  <!-- =================================================================== -->
  <target name="compile-NetworkBLAST" depends="init-NetworkBLAST"  >

   <echo message=" COMPILE NetworkBLAST "/>

    <mkdir dir="${NetworkBLAST.classes.dir}"/>
    <javac srcdir="${NetworkBLAST.src.dir}"
           excludes="${NetworkBLAST.excludes}"
           classpathref="NetworkBLAST.project.class.path"
           destdir="${NetworkBLAST.classes.dir}"
           debug="${debug}"
           nowarn="${nowarn}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the NetworkBLAST.jar file                                           -->
  <!-- =================================================================== -->
  <target name="NetworkBLAST" depends="compile-NetworkBLAST"  >
    <jar destfile="NetworkBLAST.jar" manifest="${NetworkBLAST.manifest.dir}/NetworkBLAST.manifest">
      <fileset
        dir="${NetworkBLAST.classes.dir}"
        includes="**"/>
      <fileset dir="${NetworkBLAST.resources.dir}"/>
    </jar>
  </target>

  <!-- Build all jars                                                      -->
  <!-- =================================================================== -->
  <target name="all" depends="NetworkBLAST"/>

  <!-- =================================================================== -->
  <!-- Clean up, get back to original state                                -->
  <!-- =================================================================== -->
  <target name="clean" depends="init-NetworkBLAST">
    <delete dir="${NetworkBLAST.classes.dir}"/>
    <delete file="NetworkBLAST.jar"/>
  </target>

</project>

<!-- End of file -->
