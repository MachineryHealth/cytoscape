<project name="cytoscape.build" default="product-build">

	<import file= "./build_product_config.xml"/>

	<!--
		This target actually executes the PDE Build process by launching the 
		Eclipse antRunner application.
	-->
	<target name="product-build" depends="init">	

		<java classname="org.eclipse.equinox.launcher.Main" fork="true" failonerror="true" >
			<arg value="-application" />
			<arg value="org.eclipse.ant.core.antRunner" />
			<arg value="-buildfile" />
			<arg value="build_product.xml" />
			<classpath>
				<pathelement location="${baseLocation}/plugins/${equinoxLauncher}" />
			</classpath>

		</java>	
	</target>

	<target name="init">	
		<unzip dest="${buildDirectory}/target" overwrite="true" src="${buildDirectory}/../../feature/build_feature/I.featureBuild/cytoscape_product_feature-featureBuild.zip" />
	</target>

</project>
