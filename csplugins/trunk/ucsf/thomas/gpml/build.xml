<?xml version="1.0"?>
<project name="CytoscapeGpml" default="jar" basedir=".">
	<property name="plugin.name" value="gpml"/>
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="class.dir" value="class"/>
	<property name="lib.dir" value="lib"/>
	<property name="pathvisio.dir" value="${lib.dir}/pathvisio"/>
	<property name="pathvisio.class.dir" value="class.pathvisio"/>
	<property name="cytoscape.dir" value="/home/thomas/cytoscape-v2.5.0"/>
	<property name="cytoscape.plugin.dir" value="${cytoscape.dir}/plugins"/>
	
	<path id="class.path">
		<pathelement location="${lib.dir}/jdom.jar"/>
		<pathelement location="${lib.dir}/resources.jar"/>
		<pathelement location="${lib.dir}/pathvisio/pathvisio_v1.jar"/>
		<pathelement location="${cytoscape.dir}/cytoscape.jar"/>
	</path>

	<target name="prepare" description="Prepare">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${pathvisio.class.dir}"/>
		<mkdir dir="${class.dir}"/>
	</target>
	
	<target name="clean" description="Remove all generated files.">
		<delete dir="${build.dir}"/>
		<delete dir="${pathvisio.class.dir}"/>
		<delete dir="${class.dir}"/>
	</target>
	
	<target name="compile" depends="prepare" description="Compile all sources">
		<javac srcdir="src" debug="true" 
			destdir="${build.dir}">
			<classpath refid="class.path"/>
		</javac>
	</target>
	
	
	<target name="jar" depends="compile" description="Generate jar file">
		<unjar dest="${class.dir}">
			<fileset dir="${lib.dir}" includes="*.jar"/>
		</unjar>
		<unjar dest="${pathvisio.class.dir}">
			<fileset dir="${pathvisio.dir}" includes="*.jar"/>
		</unjar>

		<jar jarfile="${plugin.name}.jar">
			<fileset dir="${build.dir}" includes="**/*.class"/>	
			<fileset dir="${class.dir}" includes="**/*.class"/>
			<fileset dir="${class.dir}" includes="**/*.xsd"/>	
			<fileset dir="${pathvisio.class.dir}">
				<include name="org/pathvisio/model/*.class"/>
				<include name="org/pathvisio/view/swing/*.class"/>
				<include name="org/pathvisio/debug/Logger.class"/>
				<include name="org/pathvisio/debug/StopWatch.class"/>
			</fileset>
			<manifest>
				<attribute name="Cytoscape-Plugin" value="gpml.GpmlImporter"/>
			</manifest>
		</jar>
			
    </target>
	
	<target name="dest"  depends="jar" description="Copy the jars to the Cytoscape plugin directory">
		<copy file="${plugin.name}.jar" todir="${cytoscape.plugin.dir}"/>
	</target>
	
</project>
