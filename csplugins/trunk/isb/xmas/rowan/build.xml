<project name="rowan" default="rowan" basedir=".">

  <!-- =================================================================== -->
  <!-- Initialization target                                               -->
  <!-- =================================================================== -->
  <target name="init-rowan">
    <tstamp/>
    <property name="rowan.Name" value="rowan"/>
    <property name="rowan.name" value="rowan"/>
    <property name="rowan.version" value="0.1"/>
    <property name="rowan.year" value="200"/>

    <echo message="Building ${rowan.name} version ${rowan.version}."/>

    <!-- Inheritable properties -->
    <property name="debug" value="on"/>
    <property name="optimize" value="off"/>
    <property name="deprecation" value="on"/>
    <property name="nowarn" value="true"/>
    <property name="fork" value="false"/>
    <property name="rowan.root.dir" value="."/>
    <property name="rowan.lib.dir" value="${rowan.root.dir}/lib"/>
    <property name="cytoscape.lib.dir" value="${rowan.root.dir}/../../../../cytoscape/lib"/>
    <property name="cytoscape.plugin.dir" value="${rowan.root.dir}/../../../../cytoscape/plugins"/>
    <path id="project.class.path">
      <pathelement path="${java.class.path}/"/>
    </path>

    <!-- Define the directories -->
    <property name="rowan.root.dir" value="./"/>
    <property name="rowan.src.dir" value="${rowan.root.dir}/src"/>
    <property name="rowan.classes.dir" value="${rowan.root.dir}/classes"/>
    <property name="rowan.javadoc.dir" value="${javadoc.dir}/rowan"/>
    <property name="rowan.resources.dir" value="${rowan.root.dir}/resources"/>
    <property name="rowan.manifest.dir" value="${rowan.root.dir}/manifest"/>
    <property name="rowan.packages" value="rowan.*"/>
    <!-- Subdirectory for test reports -->
    <property name="rowan.tests.reports.dir" value="${rowan.root.dir}/reports/tests" />
    <property name="cytoscape.lib" value="../../cytoscape/lib" />

    <!-- Define the condition for compilation -->
    <property name="cytoscape.jar" value="${rowan.lib.dir}/cytoscape.jar"/>
    <property name="colt.jar" value="${rowan.lib.dir}/colt.jar"/>
    

    <condition property="cytoscape.present">
      <and> 
	  		<available file="${cytoscape.jar}"/> 
				<available file="${colt.jar}"/> 
		  </and>
    </condition>

    <!-- Define excludes for rowan compile and javadoc -->
    <property name="rowan.excludes" value="**/notyet/*"/>
    <property name="rowan.tests.excludes" value="**/notyet/*"/>
    <property name="rowan.packages.excludes" value="**.test.*,**.notyet.*"/>

    <path id="rowan.project.class.path">
      <pathelement location="${rowan.classes.dir}"/>
      <pathelement location="${cytoscape.lib.dir}/colt.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape.jar"/>
      <pathelement location="${cytoscape.lib.dir}/y.jar"/>
      <pathelement location="${cytoscape.lib.dir}/giny.jar"/>
      <pathelement location="${cytoscape.lib.dir}/phoebe.jar"/>
      <pathelement location="${cytoscape.lib.dir}/coltginy.jar"/>
      <pathelement location="${cytoscape.lib.dir}/piccolo.jar"/>
      <pathelement location="${cytoscape.lib.dir}/piccolox.jar"/>
      <pathelement location="${cytoscape.lib.dir}/glf.jar"/>
      <pathelement location="${cytoscape.lib.dir}/violinstrings-1.0.2.jar"/>
      <pathelement location="${cytoscape.plugin.dir}/filter.jar"/>      
      <pathelement path="${project.class.path}/"/>
    </path>

  

  </target>

  <!-- =================================================================== -->
  <!-- Compiles the rowan project                                           -->
  <!-- =================================================================== -->
  <target name="compile-rowan" depends="init-rowan"  >

   <echo message=" COMPILE rowan "/>

    <mkdir dir="${rowan.classes.dir}"/>
    <javac srcdir="${rowan.src.dir}"
           excludes="${rowan.excludes}"
           classpathref="rowan.project.class.path"
           destdir="${rowan.classes.dir}"
           debug="${debug}"
           nowarn="${nowarn}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the rowan.jar file                                           -->
  <!-- =================================================================== -->
  <target name="rowan" depends="compile-rowan"  >
    <jar destfile="rowan.jar" manifest="${rowan.manifest.dir}/rowan.manifest">
      <fileset
        dir="${rowan.classes.dir}"
        includes="**"/>
      <fileset
        dir="${rowan.root.dir}/lib"
        includes="resources/**"/>
      <fileset 
        dir="${rowan.root.dir}/images"/>
    </jar>
    <copy todir="${rowan.lib.dir}" file="rowan.jar"/>
    <copy todir="${cytoscape.plugin.dir}" file="rowan.jar"/>
  </target>

  <!-- =================================================================== -->
  <!-- Compiles the rowan tests                                             -->
  <!-- =================================================================== -->
  <target name="compile-tests" depends="rowan"  >
    <mkdir dir="${rowan.classes.dir}"/>
    <javac srcdir="${rowan.src.dir}"
           includes="**/test/*"
           excludes="${rowan.tests.excludes}"
           classpathref="rowan.project.class.path"
           destdir="${rowan.classes.dir}"
           debug="${debug}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the rowan-tests.jar file                                     -->
  <!-- =================================================================== -->
  <target name="tests" depends="compile-tests"  >
    <jar jarfile="rowan-tests.jar"
         basedir="${rowan.classes.dir}"
         includes="**/test/*"/>
  </target>

  <!-- =================================================================== -->
  <!-- Build all jars                                                      -->
  <!-- =================================================================== -->
  <target name="all" depends="rowan"/>

   <!-- =================================================================== -->
  <!-- Run the Plugin                                                      -->
  <!-- =================================================================== -->
  <target name="run" depends="rowan" >
     
     <java classname="cytoscape.cytoscape" 
           classpathref="rowan.project.class.path"
           fork="true"/>
           <arg line = "-y giny"/>
           <arg line = "--JLD"/>
           <arg line = "${rowan.lib.dir}/rowan.jar"/>
           

  </target>



  <!-- =================================================================== -->
  <!-- Runs the tests in rowan-tests.jar                                    -->
  <!-- =================================================================== -->
  <target name="runtests" depends="tests"  >
    <mkdir dir="${rowan.tests.reports.dir}"/>
    <junit
       printsummary="yes"
       haltonfailure="no"
       dir="${rowan.classes.dir}"
       maxmemory="1G"
    >
      <formatter type="plain" usefile="true" />
      <classpath refid="rowan.project.class.path"/>
      <!-- The junit task doesn't support 'if' so we test for JUnit here -->
      <batchtest fork="yes" todir="${rowan.tests.reports.dir}" if="junit.present">
        <fileset
           dir="${rowan.classes.dir}"
           includes="**/test/*"
           excludes="${rowan.tests.excludes}"
        />
      </batchtest>
    </junit>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the API documentation                                       -->
  <!-- =================================================================== -->
  <target name="docs" depends="init-rowan" >
    <mkdir dir="${rowan.javadoc.dir}"/>
    <javadoc packagenames="${rowan.packages}"
             excludepackagenames="${rowan.packages.excludes}"
             sourcepath="${rowan.src.dir}"
             destdir="${rowan.javadoc.dir}"
             classpathref="rowan.project.class.path"
             author="true"
             version="true"
             use="true"
             splitindex="true"
             noindex="false"
             windowtitle="${rowan.Name} API"
             doctitle="${rowan.Name}"
    />
  </target>
 
  <!-- =================================================================== -->
  <!-- Clean up, get back to original state                                -->
  <!-- =================================================================== -->
  <target name="clean" depends="init-rowan">
    <delete dir="${rowan.classes.dir}"/>
    <delete file="rowan.jar"/>
    <delete file="rowan-tests.jar"/>
  </target>

</project>

<!-- End of file -->
