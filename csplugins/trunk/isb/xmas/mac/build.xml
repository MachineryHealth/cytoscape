<?xml version="1.0"?>
<!-- build.xml - Build file for mac plugin (handles Mac specific events on OS X in Java -->
<project name="mac" default="mac" basedir=".">

	<!-- Name of Plug In -->
	<!-- The name is used to create the plugin JAR file -->
	<property name="plugin.name" value="mac"/>

  	<!-- The directory containing source code -->
  	<property name="src.dir" value="src"/>

	<!--  The directory containing library jar files -->
	<property name="lib1.dir" value="../../../../cytoscape/lib"/>
	<!--  Cytoscape.jar gets put by default in cytoscape (not lib) -->
	<property name="lib2.dir" value="../../../../cytoscape"/>
	<!--  AppleJavaExtensions.jar required to build on non-mac platforms -->
	<property name="apple-extensions.dir" value="lib"/>
	<condition property="appleExtensionsRequired">
	<not>
		<os family="mac"/>
	</not>
	</condition>

  	<!-- Temporary build directories -->
 	<property name="build.dir" value="build"/>
  	<property name="build.classes" value="${build.dir}/classes"/>

	<!-- Global "magic" property for <javac> -->
	<property name="build.compiler" value="modern"/>

	<!-- Classpath with all lib JAR Files and all Cytoscape Core classes -->
	<path id="classpath">
		<pathelement path="${build.classes}"/>
		<pathelement path="../../../../cytoscape/build/classes"/>
		<fileset dir="${lib1.dir}">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${lib2.dir}">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${apple-extensions.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<target name="prepareAppleExtensions" if="appleExtensionsRequired">
    		<mkdir dir="${apple-extensions.dir}"/>
		<copy file="resource/AppleJavaExtensions.jar" todir="${apple-extensions.dir}"/>		
	</target>

  	<!-- Target to create the build directories prior to compilation -->
  	<target name="prepare" depends="prepareAppleExtensions">
    		<mkdir dir="${build.dir}"/>
    		<mkdir dir="${build.classes}"/>
  	</target>

	<!--  Target to clean out all directories -->
  	<target name="clean" description="Removes all generated files.">
    		<delete dir="${build.dir}"/>
    		<delete dir="${apple-extensions.dir}"/>
  	</target>

	<!--  Target to compile all Plug In Code -->
  	<target name="compile" depends="prepare"
		description="Compiles all Plugin source code (Note: Expects to run from the directory containing this build.xml file).">
    		<javac srcdir="${src.dir}" destdir="${build.classes}" nowarn="on" source="1.4">
			<include name="csplugins/**"/>
			<classpath refid="classpath"/>
		</javac>
	</target>

	<!--  Create PlugIn Jar File -->
   	<target name="jar" depends="compile" description="Creates PlugIn Jar File.">
		<jar destfile="${build.dir}/${plugin.name}.jar">
			<fileset dir="${build.classes}"/>
		</jar>
		<echo message="${plugin.name}.jar is now complete.  It is located in build/ directory"/>
	</target>
</project>

<!-- End of file -->
