<project name="metaviz" default="metaviz" basedir=".">

  <!-- =================================================================== -->
  <!-- Initialization target                                               -->
  <!-- =================================================================== -->
  <target name="init-metaviz">
    <tstamp/>
    <property name="metaviz.Name" value="metaviz"/>
    <property name="metaviz.name" value="metaviz"/>
    <property name="metaviz.version" value="0.1"/>
    <property name="metaviz.year" value="200"/>

    <echo message="Building ${metaviz.name} version ${metaviz.version}."/>

    <!-- Inheritable properties -->
    <property name="debug" value="on"/>
    <property name="optimize" value="off"/>
    <property name="deprecation" value="on"/>
    <property name="nowarn" value="true"/>
    <property name="fork" value="false"/>
    <property name="metaviz.root.dir" value="."/>
    <property name="metaviz.lib.dir" value="${metaviz.root.dir}/lib"/>
    <property name="cytoscape.lib.dir" value="${metaviz.root.dir}/../../../../cytoscape/lib"/>
    <property name="cytoscape.plugin.dir" value="${metaviz.root.dir}/../../../../cytoscape/plugins"/>
    <path id="project.class.path">
      <pathelement path="${java.class.path}/"/>
    </path>

    <!-- Define the directories -->
    <property name="metaviz.root.dir" value="./"/>
    <property name="metaviz.src.dir" value="${metaviz.root.dir}/src"/>
    <property name="metaviz.classes.dir" value="${metaviz.root.dir}/classes"/>
    <property name="metaviz.javadoc.dir" value="${javadoc.dir}/metaviz"/>
    <property name="metaviz.resources.dir" value="${metaviz.root.dir}/resources"/>
    <property name="metaviz.manifest.dir" value="${metaviz.root.dir}/manifest"/>
    <property name="metaviz.packages" value="metaviz.*"/>
    <!-- Subdirectory for test reports -->
    <property name="metaviz.tests.reports.dir" value="${metaviz.root.dir}/reports/tests" />
    <property name="cytoscape.lib" value="../../cytoscape/lib" />

    <!-- Define the condition for compilation -->
    <property name="cytoscape.jar" value="${metaviz.lib.dir}/cytoscape.jar"/>
    <property name="colt.jar" value="${metaviz.lib.dir}/colt.jar"/>
    

    <condition property="cytoscape.present">
      <and> 
	  		<available file="${cytoscape.jar}"/> 
				<available file="${colt.jar}"/> 
		  </and>
    </condition>

    <!-- Define excludes for metaviz compile and javadoc -->
    <property name="metaviz.excludes" value="**/notyet/*"/>
    <property name="metaviz.tests.excludes" value="**/notyet/*"/>
    <property name="metaviz.packages.excludes" value="**.test.*,**.notyet.*"/>

    <path id="metaviz.project.class.path">
      <pathelement location="${metaviz.classes.dir}"/>
      <pathelement location="${cytoscape.lib.dir}/colt.jar"/>
      <pathelement location="${cytoscape.lib.dir}/cytoscape.jar"/>
      <pathelement location="${cytoscape.lib.dir}/giny.jar"/>
      <pathelement location="${cytoscape.lib.dir}/phoebe.jar"/>
      <pathelement location="${cytoscape.lib.dir}/piccolo.jar"/>
      <pathelement location="${cytoscape.lib.dir}/piccolox.jar"/>
      <pathelement location="${cytoscape.lib.dir}/coltginy.jar"/>
      <pathelement location="${cytoscape.lib.dir}/tclib.jar"/>
      <pathelement path="${project.class.path}/"/>
    </path>

   
  </target>

  <!-- =================================================================== -->
  <!-- Compiles the metaviz project                                           -->
  <!-- =================================================================== -->
  <target name="compile-metaviz" depends="init-metaviz"  >

   <echo message=" COMPILE metaviz "/>

    <mkdir dir="${metaviz.classes.dir}"/>
    <javac compiler="jikes"
           srcdir="${metaviz.src.dir}"
           excludes="${metaviz.excludes}"
           classpathref="metaviz.project.class.path"
           destdir="${metaviz.classes.dir}"
           debug="${debug}"
           nowarn="${nowarn}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the metaviz.jar file                                           -->
  <!-- =================================================================== -->
  <target name="metaviz" depends="compile-metaviz"  >
    <jar destfile="metaviz.jar" manifest="${metaviz.manifest.dir}/metaviz.manifest">
      <fileset
        dir="${metaviz.classes.dir}"
        includes="**"/>
      <fileset
        dir="${metaviz.root.dir}/lib"
        includes="resources/**"/>
    </jar>
    <copy todir="${metaviz.lib.dir}" file="metaviz.jar"/>
    <copy todir="${cytoscape.plugin.dir}" file="metaviz.jar"/>
  </target>

  <!-- =================================================================== -->
  <!-- Compiles the metaviz tests                                             -->
  <!-- =================================================================== -->
  <target name="compile-tests" depends="metaviz"  >
    <mkdir dir="${metaviz.classes.dir}"/>
    <javac srcdir="${metaviz.src.dir}"
           includes="**/test/*"
           excludes="${metaviz.tests.excludes}"
           classpathref="metaviz.project.class.path"
           destdir="${metaviz.classes.dir}"
           debug="${debug}"
           deprecation="${deprecation}" 
           optimize="${optimize}"
           fork="${fork}"/>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the metaviz-tests.jar file                                     -->
  <!-- =================================================================== -->
  <target name="tests" depends="compile-tests"  >
    <jar jarfile="metaviz-tests.jar"
         basedir="${metaviz.classes.dir}"
         includes="**/test/*"/>
  </target>

  <!-- =================================================================== -->
  <!-- Build all jars                                                      -->
  <!-- =================================================================== -->
  <target name="all" depends="metaviz"/>

   <!-- =================================================================== -->
  <!-- Run the Plugin                                                      -->
  <!-- =================================================================== -->
  <target name="run" depends="metaviz" >
     
     <java classname="cytoscape.cytoscape" 
           classpathref="metaviz.project.class.path"
           fork="true"/>
           <arg line = "-y giny"/>
           <arg line = "--JLD"/>
           <arg line = "${metaviz.lib.dir}/metaviz.jar"/>
           

  </target>



  <!-- =================================================================== -->
  <!-- Runs the tests in metaviz-tests.jar                                    -->
  <!-- =================================================================== -->
  <target name="runtests" depends="tests"  >
    <mkdir dir="${metaviz.tests.reports.dir}"/>
    <junit
       printsummary="yes"
       haltonfailure="no"
       dir="${metaviz.classes.dir}"
       maxmemory="1G"
    >
      <formatter type="plain" usefile="true" />
      <classpath refid="metaviz.project.class.path"/>
      <!-- The junit task doesn't support 'if' so we test for JUnit here -->
      <batchtest fork="yes" todir="${metaviz.tests.reports.dir}" if="junit.present">
        <fileset
           dir="${metaviz.classes.dir}"
           includes="**/test/*"
           excludes="${metaviz.tests.excludes}"
        />
      </batchtest>
    </junit>
  </target>

  <!-- =================================================================== -->
  <!-- Creates the API documentation                                       -->
  <!-- =================================================================== -->
  <target name="docs" depends="init-metaviz" >
    <mkdir dir="${metaviz.javadoc.dir}"/>
    <javadoc packagenames="${metaviz.packages}"
             excludepackagenames="${metaviz.packages.excludes}"
             sourcepath="${metaviz.src.dir}"
             destdir="${metaviz.javadoc.dir}"
             classpathref="metaviz.project.class.path"
             author="true"
             version="true"
             use="true"
             splitindex="true"
             noindex="false"
             windowtitle="${metaviz.Name} API"
             doctitle="${metaviz.Name}"
    />
  </target>
 
  <!-- =================================================================== -->
  <!-- Clean up, get back to original state                                -->
  <!-- =================================================================== -->
  <target name="clean" depends="init-metaviz">
    <delete dir="${metaviz.classes.dir}"/>
    <delete file="metaviz.jar"/>
    <delete file="metaviz-tests.jar"/>
  </target>

</project>

<!-- End of file -->
