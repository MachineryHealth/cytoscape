#! /usr/bin/env python

import sys, os
myBinDir = os.path.normpath(os.path.dirname(sys.argv[0]))
sys.path.append(myBinDir + "/../src")

from illumina.vcfTools import VCFReader

def main():
    
    headerLines = []
    for entry in VCFReader(sys.argv[1], "standard"): # May need to set to "clia" depending on vcf file.
        if entry.isVariant:
            #formatted = entry.formatForSnvGet()
            #formatted = entry.bedString()
            formatted = entry.formatForAnnovar()
            print formatted
        else:
            headerLines.append(entry)

if __name__ == "__main__":
    main()
